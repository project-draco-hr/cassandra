{
  String[] parts=StringUtils.split(name,'/');
  if (!parts[0].equals(ROOT_NAME) || parts.length > 3)   throw new IllegalArgumentException(String.format("%s is not a valid function resource name",name));
  if (parts.length == 1)   return root();
  if (parts.length == 2)   return keyspace(parts[1]);
  String[] nameAndArgs=StringUtils.split(parts[2],"[|]");
  return function(parts[1],nameAndArgs[0],argsListFromString(nameAndArgs[1]));
}
