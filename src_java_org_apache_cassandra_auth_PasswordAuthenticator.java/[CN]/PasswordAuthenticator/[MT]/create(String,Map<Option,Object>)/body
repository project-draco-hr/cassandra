{
  String password=(String)options.get(Option.PASSWORD);
  if (password == null)   throw new InvalidRequestException("PasswordAuthenticator requires PASSWORD option");
  process(String.format("INSERT INTO %s.%s (username, salted_hash) VALUES ('%s', '%s')",Auth.AUTH_KS,CREDENTIALS_CF,escape(username),escape(hashpw(password))),consistencyForUser(username));
}
