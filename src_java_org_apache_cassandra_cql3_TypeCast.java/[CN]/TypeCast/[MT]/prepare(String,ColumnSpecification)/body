{
  if (!term.isAssignableTo(keyspace,castedSpecOf(keyspace,receiver)))   throw new InvalidRequestException(String.format("Cannot cast value %s to type %s",term,type));
  if (!isAssignableTo(keyspace,receiver))   throw new InvalidRequestException(String.format("Cannot assign value %s to %s of type %s",this,receiver,receiver.type.asCQL3Type()));
  return term.prepare(keyspace,receiver);
}
