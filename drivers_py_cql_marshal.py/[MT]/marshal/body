def marshal(term):
    if isinstance(term, (long, int)):
        return ('%d' % term)
    elif isinstance(term, unicode):
        return ("'%s'" % __escape_quotes(term.encode('utf8')))
    elif isinstance(term, str):
        return ("'%s'" % __escape_quotes(term))
    elif isinstance(term, UUID):
        return str(term)
    else:
        return str(term)
