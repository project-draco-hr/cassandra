{
  Term.Terminal value=t.bind(params.options);
  if (value == null)   return;
  Set<ByteBuffer> toDiscard=value instanceof Constants.Value ? Collections.singleton(((Constants.Value)value).bytes) : ((Sets.Value)value).elements;
  for (  ByteBuffer bb : toDiscard) {
    cf.addColumn(params.makeTombstone(cf.getComparator().create(prefix,column,bb)));
  }
}
