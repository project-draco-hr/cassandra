{
  ArrayBackedSortedColumns cf=ArrayBackedSortedColumns.factory.create(cfs.metadata);
  for (int i=0; i < count / 100; i++)   cf.addColumn(Util.cellname(i),random(0,1000),1);
  File dir=cfs.directories.getDirectoryForNewSSTables();
  String filename=cfs.getTempSSTablePath(dir);
  SSTableWriter writer=SSTableWriter.create(filename,0,0);
  for (int i=0; i < count * 5; i++)   writer.append(StorageService.getPartitioner().decorateKey(ByteBufferUtil.bytes(i)),cf);
  return writer.closeAndOpenReader();
}
