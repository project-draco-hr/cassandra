{
  File tempdir=File.createTempFile(tablename,cfname);
  if (!tempdir.delete() || !tempdir.mkdir())   throw new IOException("Temporary directory creation failed.");
  tempdir.deleteOnExit();
  File tabledir=new File(tempdir,tablename);
  tabledir.mkdir();
  tabledir.deleteOnExit();
  return File.createTempFile(cfname + "-","-" + SSTable.TEMPFILE_MARKER + "-Data.db",tabledir);
}
