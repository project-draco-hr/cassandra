{
  logger.debug("Refreshing UDFs");
  for (  UntypedResultSet.Row row : QueryProcessor.executeOnceInternal(SELECT_CQL)) {
    UFMetaData uf=UFMetaData.fromSchema(row);
    UDFFunctionOverloads sigMap=functions.get(uf.qualifiedName);
    if (sigMap == null)     functions.put(uf.qualifiedName,sigMap=new UDFFunctionOverloads());
    if (Functions.contains(uf.qualifiedName))     logger.warn("The UDF '" + uf.functionName + "' cannot be used because it uses the same name as the CQL "+ "function with the same name. You should drop this function but can do a "+ "'DESCRIBE FUNCTION "+ uf.functionName+ ";' in cqlsh before to get more information about it.");
    sigMap.addAndInit(uf,true);
    if (uf.invalid != null)     logger.error("Loaded invalid UDF : " + uf.invalid.getMessage());
  }
}
