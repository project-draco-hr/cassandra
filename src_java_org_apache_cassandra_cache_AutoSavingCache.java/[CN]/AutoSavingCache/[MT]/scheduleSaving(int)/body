{
  if (saveTask != null) {
    saveTask.cancel(false);
    saveTask=null;
  }
  if (savePeriodInSeconds > 0) {
    Runnable runnable=new WrappedRunnable(){
      public void runMayThrow(){
        submitWrite();
      }
    }
;
    saveTask=StorageService.scheduledTasks.scheduleWithFixedDelay(runnable,savePeriodInSeconds,savePeriodInSeconds,TimeUnit.SECONDS);
  }
}
