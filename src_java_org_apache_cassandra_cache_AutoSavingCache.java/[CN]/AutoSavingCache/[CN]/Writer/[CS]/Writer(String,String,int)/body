{
  if (keysToSave >= getKeySet().size())   keys=getKeySet();
 else   keys=hotKeySet(keysToSave);
  long bytes=0;
  for (  K key : keys)   bytes+=translateKey(key).remaining();
  estimatedTotalBytes=bytes;
  CompactionType type;
  if (cacheType == ColumnFamilyStore.CacheType.KEY_CACHE_TYPE)   type=CompactionType.KEY_CACHE_SAVE;
 else   if (cacheType == ColumnFamilyStore.CacheType.ROW_CACHE_TYPE)   type=CompactionType.ROW_CACHE_SAVE;
 else   type=CompactionType.UNKNOWN;
  info=new CompactionInfo(ksname,cfname,type,0,estimatedTotalBytes);
}
