{
  if (keysToSave >= getKeySet().size())   keys=getKeySet();
 else   keys=hotKeySet(keysToSave);
  long bytes=0;
  for (  K key : keys)   bytes+=translateKey(key).remaining();
  estimatedTotalBytes=bytes;
  OperationType type;
  if (cacheType == ColumnFamilyStore.CacheType.KEY_CACHE_TYPE)   type=OperationType.KEY_CACHE_SAVE;
 else   if (cacheType == ColumnFamilyStore.CacheType.ROW_CACHE_TYPE)   type=OperationType.ROW_CACHE_SAVE;
 else   type=OperationType.UNKNOWN;
  info=new CompactionInfo(this.hashCode(),ksname,cfname,type,0,estimatedTotalBytes);
}
