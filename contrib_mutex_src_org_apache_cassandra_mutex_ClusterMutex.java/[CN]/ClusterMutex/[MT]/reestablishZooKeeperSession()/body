{
  long now=System.currentTimeMillis();
  if ((now - lastConnect) < SessionTimeout) {
    if (logger.isTraceEnabled())     logger.trace("Only " + (now - lastConnect) + "ms passed since last reconnect, not trying again yet");
    return;
  }
  lastConnect=now;
  try {
    zk.close();
  }
 catch (  Exception e) {
  }
  connectZooKeeper();
}
