{
  String keyWhereClause="";
  for (  String partitionKey : partitionKeyColumns)   keyWhereClause+=String.format("%s = ?",keyWhereClause.isEmpty() ? quote(partitionKey) : (" AND " + quote(partitionKey)));
  for (  String clusterColumn : clusterColumns)   keyWhereClause+=" AND " + quote(clusterColumn) + " = ?";
  return cqlQuery + " WHERE " + keyWhereClause;
}
