{
  int size=file.readInt();
  if (size > maxSize || size <= 0)   throw new EOFException("bloom filter claims to be " + size + " bytes, longer than entire row size "+ maxSize);
  ByteBuffer bytes=file.readBytes(size);
  DataInputStream stream=new DataInputStream(ByteBufferUtil.inputStream(bytes));
  return useOldBuffer ? LegacyBloomFilter.serializer().deserialize(stream,0) : BloomFilter.serializer().deserialize(stream);
}
