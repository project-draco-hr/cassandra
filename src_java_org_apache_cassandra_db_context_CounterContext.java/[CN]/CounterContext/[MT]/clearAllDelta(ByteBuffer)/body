{
  int headerLength=headerLength(context);
  if (headerLength == HEADER_SIZE_LENGTH)   return context;
  ByteBuffer cleaned=ByteBuffer.allocate(context.remaining() - headerLength + HEADER_SIZE_LENGTH);
  cleaned.putShort(cleaned.position(),(short)0);
  ByteBufferUtil.arrayCopy(context,context.position() + headerLength,cleaned,cleaned.position() + HEADER_SIZE_LENGTH,context.remaining() - headerLength);
  return cleaned;
}
