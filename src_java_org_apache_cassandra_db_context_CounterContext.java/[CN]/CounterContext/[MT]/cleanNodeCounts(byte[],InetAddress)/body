{
  byte[] nodeId=node.getAddress();
  for (int offset=0; offset < context.length; offset+=stepLength) {
    if (FBUtilities.compareByteSubArrays(context,offset,nodeId,0,idLength) != 0)     continue;
    byte[] truncatedContext=new byte[context.length - stepLength];
    System.arraycopy(context,0,truncatedContext,0,offset);
    System.arraycopy(context,offset + stepLength,truncatedContext,offset,context.length - (offset + stepLength));
    return truncatedContext;
  }
  return context;
}
