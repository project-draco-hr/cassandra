{
  TaskAttemptContext tac=HadoopCompat.newMapContext(jobConf,TaskAttemptID.forName(jobConf.get(MAPRED_TASK_ID)),null,null,null,new ReporterWrapper(reporter),null);
  ColumnFamilyRecordReader recordReader=new ColumnFamilyRecordReader(jobConf.getInt(CASSANDRA_HADOOP_MAX_KEY_SIZE,CASSANDRA_HADOOP_MAX_KEY_SIZE_DEFAULT));
  recordReader.initialize((org.apache.hadoop.mapreduce.InputSplit)split,tac);
  return recordReader;
}
