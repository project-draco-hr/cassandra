{
  Collection<String> initialTokens=DatabaseDescriptor.getInitialTokens();
  if (initialTokens.size() > 0) {
    logger.debug("tokens manually specified as {}",initialTokens);
    List<Token> tokens=new ArrayList<Token>();
    for (    String tokenString : initialTokens) {
      Token token=StorageService.getPartitioner().getTokenFactory().fromString(tokenString);
      if (metadata.getEndpoint(token) != null)       throw new ConfigurationException("Bootstraping to existing token " + tokenString + " is not allowed (decommission/removenode the old node first).");
      tokens.add(token);
    }
    return tokens;
  }
  int numTokens=DatabaseDescriptor.getNumTokens();
  if (numTokens < 1)   throw new ConfigurationException("num_tokens must be >= 1");
  if (numTokens == 1)   return Collections.singleton(getBalancedToken(metadata,load));
  return getRandomTokens(metadata,numTokens);
}
