{
  if (!isEnabled())   return null;
  while (true) {
    List<SSTableReader> smallestBucket=getNextBackgroundSSTables(gcBefore);
    if (smallestBucket.isEmpty())     return null;
    if (cfs.getDataTracker().markCompacting(smallestBucket))     return new CompactionTask(cfs,smallestBucket,gcBefore);
  }
}
