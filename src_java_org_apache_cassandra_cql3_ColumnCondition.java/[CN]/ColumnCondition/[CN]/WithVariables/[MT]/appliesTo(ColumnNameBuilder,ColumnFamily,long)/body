{
  if (column.type instanceof CollectionType)   return collectionAppliesTo((CollectionType)column.type,rowPrefix,current,now);
  ColumnNameBuilder prefix=copyOrUpdatePrefix(current.metadata(),rowPrefix);
  ByteBuffer columnName=column.kind == CFDefinition.Name.Kind.VALUE_ALIAS ? prefix.build() : prefix.add(column.name.key).build();
  Column c=current.getColumn(columnName);
  ByteBuffer v=value.bindAndGet(variables);
  return v == null ? c == null || !c.isLive(now) : c != null && c.isLive(now) && column.type.compare(c.value(),v) == 0;
}
