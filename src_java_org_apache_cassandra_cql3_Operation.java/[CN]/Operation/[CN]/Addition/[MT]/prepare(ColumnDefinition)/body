{
  Term v=value.prepare(receiver);
  if (!(receiver.type instanceof CollectionType)) {
    if (!(receiver.type instanceof CounterColumnType))     throw new InvalidRequestException(String.format("Invalid operation (%s) for non counter column %s",toString(receiver),receiver));
    return new Constants.Adder(receiver.kind == ColumnDefinition.Kind.COMPACT_VALUE ? null : receiver.name,v);
  }
switch (((CollectionType)receiver.type).kind) {
case LIST:
    return new Lists.Appender(receiver.name,v);
case SET:
  return new Sets.Adder(receiver.name,v);
case MAP:
return new Maps.Putter(receiver.name,v);
}
throw new AssertionError();
}
