{
  InputStream is=StandardAnalyzerTest.class.getClassLoader().getResourceAsStream("tokenization/ja_jp_2.txt");
  StandardTokenizerOptions options=new StandardTokenizerOptions.OptionsBuilder().stemTerms(true).ignoreStopTerms(true).alwaysLowerCaseTerms(true).build();
  StandardAnalyzer tokenizer=new StandardAnalyzer();
  tokenizer.init(options);
  tokenizer.reset(is);
  List<ByteBuffer> tokens=new ArrayList<>();
  while (tokenizer.hasNext())   tokens.add(tokenizer.next());
  assertEquals(57,tokens.size());
}
