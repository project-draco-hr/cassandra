{
  if (value == null)   return ByteBufferUtil.EMPTY_BYTE_BUFFER;
  BigInteger bi=value.unscaledValue();
  int scale=value.scale();
  byte[] bibytes=bi.toByteArray();
  ByteBuffer bytes=ByteBuffer.allocate(4 + bibytes.length);
  bytes.putInt(scale);
  bytes.put(bibytes);
  bytes.rewind();
  return bytes;
}
