{
  long now=clock.getTime();
  rescaleIfNeeded(now);
  int index=Arrays.binarySearch(bucketOffsets,value);
  if (index < 0) {
    index=-index - 1;
  }
  lockForRegularUsage();
  try {
    decayingBuckets.getAndAdd(index,forwardDecayWeight(now));
  }
  finally {
    unlockForRegularUsage();
  }
  buckets.getAndIncrement(index);
}
