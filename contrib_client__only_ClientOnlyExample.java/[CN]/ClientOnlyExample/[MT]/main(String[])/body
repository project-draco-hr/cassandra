{
  if (args.length == 0)   System.out.println("run with \"read\" or \"write\".");
 else   if ("read".equalsIgnoreCase(args[0])) {
    try {
      testReading();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
 else   if ("write".equalsIgnoreCase(args[0])) {
    try {
      testWriting();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}
