{
  if (options.containsKey(CLASS)) {
    if (options.containsKey(SSTABLE_COMPRESSION))     throw new ConfigurationException(String.format("The '%s' option must not be used if the compression algorithm is already specified by the '%s' option",SSTABLE_COMPRESSION,CLASS));
    String clazz=options.remove(CLASS);
    if (clazz.isEmpty())     throw new ConfigurationException(String.format("The '%s' option must not be empty. To disable compression use 'enabled' : false",CLASS));
    return clazz;
  }
  if (options.containsKey(SSTABLE_COMPRESSION) && !hasLoggedSsTableCompressionWarning) {
    hasLoggedSsTableCompressionWarning=true;
    LOGGER.warn(String.format("The %s option has been deprecated. You should use %s instead",SSTABLE_COMPRESSION,CLASS));
  }
  return options.remove(SSTABLE_COMPRESSION);
}
