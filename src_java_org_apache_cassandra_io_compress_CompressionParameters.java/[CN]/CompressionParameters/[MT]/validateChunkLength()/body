{
  if (chunkLength <= 0)   throw new ConfigurationException("Invalid negative or null " + CHUNK_LENGTH_PARAMETER);
  int c=chunkLength;
  boolean found=false;
  while (c != 0) {
    if ((c & 0x01) != 0) {
      if (found)       throw new ConfigurationException(CHUNK_LENGTH_PARAMETER + " must be a power of 2");
 else       found=true;
    }
    c>>=1;
  }
}
