{
  if (chunkLength != null) {
    if (chunkLength <= 0)     throw new ConfigurationException("Invalid negative or null " + CHUNK_LENGTH_KB);
    int c=chunkLength;
    boolean found=false;
    while (c != 0) {
      if ((c & 0x01) != 0) {
        if (found)         throw new ConfigurationException(CHUNK_LENGTH_KB + " must be a power of 2");
 else         found=true;
      }
      c>>=1;
    }
  }
  if (crcChance > 1.0d || crcChance < 0.0d)   throw new ConfigurationException("crc_check_chance should be between 0.0 to 1.0");
}
