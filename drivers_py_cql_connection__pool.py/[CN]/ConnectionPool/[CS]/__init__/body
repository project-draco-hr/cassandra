def __init__(self, hostname, port=9160, keyspace=None, username=None, password=None, decoder=None, max_conns=25, max_idle=5, eviction_delay=10000):
    self.hostname = hostname
    self.port = port
    self.keyspace = keyspace
    self.username = username
    self.password = password
    self.decoder = decoder
    self.max_conns = max_conns
    self.max_idle = max_idle
    self.eviction_delay = eviction_delay
    self.connections = Queue()
    self.connections.put(self.__create_connection())
    self.eviction = Eviction(self.connections, self.max_idle, self.eviction_delay)
