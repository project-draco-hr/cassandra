{
  if (!major || table.equals(Table.SYSTEM_TABLE))   return new NoopValidator();
  if (StorageService.instance.getTokenMetadata().sortedTokens().size() < 1)   return new NoopValidator();
  if (DatabaseDescriptor.getReplicationFactor(table) < 2)   return new NoopValidator();
  CFPair cfpair=new CFPair(table,cf);
  if (initiator == null && !shouldRunNaturally(cfpair))   return new NoopValidator();
  return new Validator(cfpair);
}
