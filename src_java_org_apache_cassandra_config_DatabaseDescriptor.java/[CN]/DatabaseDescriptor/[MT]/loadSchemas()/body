{
  ColumnFamilyStore schemaCFS=SystemTable.schemaCFS(SystemTable.SCHEMA_KEYSPACES_CF);
  if (schemaCFS.estimateKeys() == 0) {
    logger.info("Couldn't detect any schema definitions in local storage.");
    if (hasExistingNoSystemTables())     logger.info("Found table data in data directories. Consider using cqlsh to define your schema.");
 else     logger.info("To create keyspaces and column families, see 'help create table' in cqlsh.");
  }
 else {
    Schema.instance.load(DefsTable.loadFromTable());
  }
  Schema.instance.updateVersion();
}
