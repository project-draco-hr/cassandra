{
switch (verb) {
case READ:
    return getReadRpcTimeout();
case RANGE_SLICE:
  return getRangeRpcTimeout();
case TRUNCATE:
return getTruncateRpcTimeout();
case READ_REPAIR:
case MUTATION:
return getWriteRpcTimeout();
case BOOTSTRAP_TOKEN:
return BootStrapper.BOOTSTRAP_TIMEOUT;
default :
return getRpcTimeout();
}
}
