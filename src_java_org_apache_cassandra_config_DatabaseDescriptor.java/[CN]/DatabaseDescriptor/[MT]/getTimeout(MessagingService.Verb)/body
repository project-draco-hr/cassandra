{
switch (verb) {
case READ:
    return getReadRpcTimeout();
case RANGE_SLICE:
  return getRangeRpcTimeout();
case TRUNCATE:
return getTruncateRpcTimeout();
case READ_REPAIR:
case MUTATION:
case PAXOS_COMMIT:
case PAXOS_PREPARE:
case PAXOS_PROPOSE:
case HINT:
case BATCH_STORE:
case BATCH_REMOVE:
return getWriteRpcTimeout();
case COUNTER_MUTATION:
return getCounterWriteRpcTimeout();
default :
return getRpcTimeout();
}
}
