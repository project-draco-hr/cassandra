def refresh_schema_metadata_best_effort(self):
    try:
        self.conn.refresh_schema_metadata(5)
    except Exception:
        self.printerr('Warning: schema version mismatch detected, which might be caused by DOWN nodes; if this is not the case, check the schema versions of your nodes in system.local and system.peers.')
        self.conn.refresh_schema_metadata(0)
