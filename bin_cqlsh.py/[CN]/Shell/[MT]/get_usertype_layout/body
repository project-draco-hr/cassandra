def get_usertype_layout(self, ksname, typename):
    if (ksname is None):
        ksname = self.current_keyspace
    ks_meta = self.get_keyspace_meta(ksname)
    try:
        user_type = ks_meta.user_types[typename]
    except KeyError:
        raise UserTypeNotFound(('User type %r not found' % typename))
    return [(field_name, field_type.cql_parameterized_type()) for (field_name, field_type) in zip(user_type.field_names, user_type.field_types)]
