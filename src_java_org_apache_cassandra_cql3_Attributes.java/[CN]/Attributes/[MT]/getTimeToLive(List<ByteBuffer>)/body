{
  if (timeToLive == null)   return 0;
  ByteBuffer tval=timeToLive.bindAndGet(variables);
  if (tval == null)   throw new InvalidRequestException("Invalid null value of TTL");
  try {
    Int32Type.instance.validate(tval);
  }
 catch (  MarshalException e) {
    throw new InvalidRequestException("Invalid timestamp value");
  }
  int ttl=Int32Type.instance.compose(tval);
  if (ttl < 0)   throw new InvalidRequestException("A TTL must be greater or equal to 0");
  if (ttl > ExpiringCell.MAX_TTL)   throw new InvalidRequestException(String.format("ttl is too large. requested (%d) maximum (%d)",ttl,ExpiringCell.MAX_TTL));
  return ttl;
}
