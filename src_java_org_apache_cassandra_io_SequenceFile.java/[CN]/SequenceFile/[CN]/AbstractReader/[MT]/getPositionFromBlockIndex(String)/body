{
  long position=-1L;
  long blockIndexPosition=file_.getFilePointer();
  String blockIndexKey=file_.readUTF();
  if (!blockIndexKey.equals(SSTable.blockIndexKey_))   throw new IOException("Unexpected position to be reading the block index from.");
  int size=file_.readInt();
  byte[] bytes=new byte[size];
  file_.readFully(bytes);
  DataInputBuffer bufIn=new DataInputBuffer();
  bufIn.reset(bytes,bytes.length);
  int keys=bufIn.readInt();
  for (int i=0; i < keys; ++i) {
    String keyInBlock=bufIn.readUTF();
    if (keyInBlock.equals(key)) {
      position=bufIn.readLong();
      break;
    }
 else {
      bufIn.readLong();
      bufIn.readLong();
    }
  }
  if (position != -1L)   position=blockIndexPosition - position;
  return position;
}
