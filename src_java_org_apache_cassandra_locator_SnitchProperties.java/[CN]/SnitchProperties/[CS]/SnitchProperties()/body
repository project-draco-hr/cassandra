{
  properties=new Properties();
  InputStream stream=null;
  String configURL=System.getProperty("cassandra.rackdc.properties");
  try {
    URL url=new URL(configURL);
    if (configURL == null)     url=SnitchProperties.class.getClassLoader().getResource("cassandra-rackdc.properties");
    stream=url.openStream();
    properties.load(stream);
  }
 catch (  Exception e) {
    logger.warn("Unable to read {}",RACKDC_PROPERTY_FILENAME);
  }
 finally {
    FileUtils.closeQuietly(stream);
  }
}
