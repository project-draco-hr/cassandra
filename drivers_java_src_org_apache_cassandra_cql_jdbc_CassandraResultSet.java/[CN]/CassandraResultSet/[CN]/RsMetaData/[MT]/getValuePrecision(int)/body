{
  column--;
  checkIndex(column);
  TypedColumn col=values.get(column);
  if (valueType instanceof ColumnMetaData)   return ((ColumnMetaData)valueType).getPrecision();
 else   if (valueType.getType().equals(String.class))   return col.getValueString().length();
 else   if (valueType == BytesType.instance)   return col.getValueString().length();
 else   if (valueType.getType().equals(UUID.class))   return 36;
 else   if (valueType == LongType.instance)   return 19;
 else   return 0;
}
