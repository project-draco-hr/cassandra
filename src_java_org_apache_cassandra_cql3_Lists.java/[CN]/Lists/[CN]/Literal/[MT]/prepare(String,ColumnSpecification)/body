{
  validateAssignableTo(keyspace,receiver);
  ColumnSpecification valueSpec=Lists.valueSpecOf(receiver);
  List<Term> values=new ArrayList<Term>(elements.size());
  boolean allTerminal=true;
  for (  Term.Raw rt : elements) {
    Term t=rt.prepare(keyspace,valueSpec);
    if (t.containsBindMarker())     throw new InvalidRequestException(String.format("Invalid list literal for %s: bind variables are not supported inside collection literals",receiver.name));
    if (t instanceof Term.NonTerminal)     allTerminal=false;
    values.add(t);
  }
  DelayedValue value=new DelayedValue(values);
  return allTerminal ? value.bind(QueryOptions.DEFAULT) : value;
}
