{
  super.validate(state);
  ThriftValidation.validateKeyspaceNotSystem(name);
  if (!name.matches("\\w+"))   throw new InvalidRequestException(String.format("\"%s\" is not a valid keyspace name",name));
  if (name.length() > Schema.NAME_LENGTH)   throw new InvalidRequestException(String.format("Keyspace names shouldn't be more than %s characters long (got \"%s\")",Schema.NAME_LENGTH,name));
  try {
    attrs.validate();
    if (attrs.getReplicationStrategyClass() == null)     throw new ConfigurationException("Missing mandatory replication strategy class");
    AbstractReplicationStrategy.createReplicationStrategy(name,AbstractReplicationStrategy.getClass(attrs.getReplicationStrategyClass()),StorageService.instance.getTokenMetadata(),DatabaseDescriptor.getEndpointSnitch(),attrs.getReplicationOptions());
  }
 catch (  ConfigurationException e) {
    throw new InvalidRequestException(e.getMessage());
  }
}
