{
  if (tracker != null)   tracker.notifyDeleting(referent);
  if (referent.readMeter != null)   SystemKeyspace.clearSSTableReadMeter(referent.getKeyspaceName(),referent.getColumnFamilyName(),referent.descriptor.generation);
  File datafile=new File(desc.filenameFor(Component.DATA));
  if (!datafile.delete()) {
    logger.error("Unable to delete {} (it will be removed on server restart; we'll also retry after GC)",datafile);
    failedTasks.add(this);
    return;
  }
  SSTable.delete(desc,Sets.difference(components,Collections.singleton(Component.DATA)));
  if (tracker != null)   tracker.spaceReclaimed(size);
}
