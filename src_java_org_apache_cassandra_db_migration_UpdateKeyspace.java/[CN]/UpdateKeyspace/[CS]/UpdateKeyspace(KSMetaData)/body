{
  super(System.nanoTime());
  if (!newState.cfMetaData().isEmpty())   throw new ConfigurationException("Updated keyspace must not contain any column families.");
  if (Schema.instance.getKSMetaData(newState.name) == null)   throw new ConfigurationException(newState.name + " cannot be updated because it doesn't exist.");
  this.newState=newState;
}
