{
  InetAddress dest=request.dst;
  InetAddress preferred=SystemKeyspace.getPreferredIP(dest);
  logger.info(String.format("[streaming task #%s] Performing streaming repair of %d ranges with %s",desc.sessionId,request.ranges.size(),request.dst));
  StreamResultFuture op=new StreamPlan("Repair").flushBeforeTransfer(true).requestRanges(dest,preferred,desc.keyspace,request.ranges,desc.columnFamily).transferRanges(dest,preferred,desc.keyspace,request.ranges,desc.columnFamily).execute();
  op.addEventListener(this);
}
