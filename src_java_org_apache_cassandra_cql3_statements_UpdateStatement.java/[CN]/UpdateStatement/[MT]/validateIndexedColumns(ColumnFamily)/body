{
  SecondaryIndexManager indexManager=Keyspace.open(cfm.ksName).getColumnFamilyStore(cfm.cfId).indexManager;
  if (indexManager.hasIndexes()) {
    for (    Cell cell : cf) {
      if (!indexManager.validate(cell))       throw new InvalidRequestException(String.format("Can't index column value of size %d for index %s on %s.%s",cell.value().remaining(),cfm.getColumnDefinition(cell.name()).getIndexName(),cfm.ksName,cfm.cfName));
    }
  }
}
