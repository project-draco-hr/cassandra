{
  if (Strings.isNullOrEmpty(restoreDirectories))   return;
  for (  String dir : restoreDirectories.split(",")) {
    File[] files=new File(dir).listFiles();
    for (    File fromFile : files) {
      File toFile=new File(DatabaseDescriptor.getCommitLogLocation(),CommitLogSegment.FILENAME_PREFIX + System.nanoTime() + CommitLogSegment.FILENAME_EXTENSION);
      String command=restoreCommand.replace("%from",fromFile.getPath());
      command=command.replace("%to",toFile.getPath());
      exec(command);
    }
  }
}
