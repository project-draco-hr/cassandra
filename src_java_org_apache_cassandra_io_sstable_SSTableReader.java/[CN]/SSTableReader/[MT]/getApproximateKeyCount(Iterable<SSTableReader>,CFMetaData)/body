{
  long count=0;
  for (  SSTableReader sstable : sstables) {
    count+=(sstable.getMaxIndexSummarySize() + 1) * sstable.indexSummary.getSamplingLevel();
    if (logger.isDebugEnabled())     logger.debug("index size for bloom filter calc for file  : {}  : {}",sstable.getFilename(),count);
  }
  return count;
}
