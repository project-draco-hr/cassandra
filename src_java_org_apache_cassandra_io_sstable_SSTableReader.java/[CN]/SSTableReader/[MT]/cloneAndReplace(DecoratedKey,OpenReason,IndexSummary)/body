{
  SSTableReader replacement=internalOpen(descriptor,components,metadata,partitioner,ifile.sharedCopy(),dfile.sharedCopy(),newSummary,bf.sharedCopy(),maxDataAge,sstableMetadata,reason);
  replacement.first=newFirst;
  replacement.last=last;
  replacement.isSuspect.set(isSuspect.get());
  setReplacedBy(replacement);
  return replacement;
}
