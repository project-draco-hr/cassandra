{
  if (logger.isDebugEnabled())   logger.debug("Marking " + getFilename() + " compacted");
  try {
    if (!new File(descriptor.filenameFor(Component.COMPACTED_MARKER)).createNewFile())     throw new IOException("Unable to create compaction marker");
  }
 catch (  IOException e) {
    throw new IOError(e);
  }
  phantomReference.deleteOnCleanup();
}
