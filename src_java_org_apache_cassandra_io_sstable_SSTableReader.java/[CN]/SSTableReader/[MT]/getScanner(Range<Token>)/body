{
  if (range == null)   return getScanner();
  Iterator<Pair<Long,Long>> rangeIterator=getPositionsForRanges(Collections.singletonList(range)).iterator();
  if (rangeIterator.hasNext())   return new SSTableBoundedScanner(this,rangeIterator);
 else   return new EmptyCompactionScanner(getFilename());
}
