{
  while (true) {
    try {
      Cassandra.Client client=createClient(addr);
      client.describe_cluster_name();
      break;
    }
 catch (    TException e) {
      LOG.debug(e.toString());
      try {
        Thread.sleep(1000);
      }
 catch (      InterruptedException ie) {
        break;
      }
    }
  }
}
