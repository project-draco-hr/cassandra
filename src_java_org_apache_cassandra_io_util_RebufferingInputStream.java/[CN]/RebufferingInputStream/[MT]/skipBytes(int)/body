{
  if (n < 0)   return 0;
  int requested=n;
  int position=buffer.position(), limit=buffer.limit(), remaining;
  while ((remaining=limit - position) < n) {
    n-=remaining;
    buffer.position(limit);
    reBuffer();
    position=buffer.position();
    limit=buffer.limit();
    if (position == limit)     return requested - n;
  }
  buffer.position(position + n);
  return requested;
}
