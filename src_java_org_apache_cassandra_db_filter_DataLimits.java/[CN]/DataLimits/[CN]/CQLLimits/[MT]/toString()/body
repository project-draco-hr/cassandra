{
  StringBuilder sb=new StringBuilder();
  if (rowLimit != Integer.MAX_VALUE) {
    sb.append("LIMIT ").append(rowLimit);
    if (perPartitionLimit != Integer.MAX_VALUE)     sb.append(" ");
  }
  if (perPartitionLimit != Integer.MAX_VALUE)   sb.append("PER PARTITION LIMIT ").append(perPartitionLimit);
  return sb.toString();
}
