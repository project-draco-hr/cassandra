{
  slices.clear();
  corpus.clear();
  while (corpus.hasRemaining()) {
    int sliceSize=Math.min(corpus.remaining(),r.nextInt(8193));
    corpus.limit(corpus.position() + sliceSize);
    slices.offer(corpus.slice());
    corpus.position(corpus.limit());
    corpus.limit(corpus.capacity());
  }
  corpus.clear();
}
