{
  try {
    Pair<Descriptor,Component> pair=Component.fromFilename(dir,name);
    if (new File(pair.left.filenameFor(Component.COMPACTED_MARKER)).exists())     return null;
 else     return pair;
  }
 catch (  Exception e) {
    if (!"snapshots".equals(name))     logger.warn("Invalid file '{}' in data directory {}.",name,dir);
    return null;
  }
}
