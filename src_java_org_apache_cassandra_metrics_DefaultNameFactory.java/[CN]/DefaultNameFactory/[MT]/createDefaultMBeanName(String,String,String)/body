{
  final StringBuilder nameBuilder=new StringBuilder();
  nameBuilder.append(GROUP_NAME);
  nameBuilder.append(":type=");
  nameBuilder.append(type);
  if (scope != null) {
    nameBuilder.append(",scope=");
    nameBuilder.append(scope);
  }
  if (name.length() > 0) {
    nameBuilder.append(",name=");
    nameBuilder.append(name);
  }
  return nameBuilder.toString();
}
