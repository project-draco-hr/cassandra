{
  try {
    while (!stopped) {
      select();
    }
  }
 catch (  Throwable t) {
    if (t instanceof OutOfMemoryError)     Throwables.propagate(t);
    StorageMetrics.exceptions.inc();
    LOGGER.error("Uncaught Exception: ",t);
  }
 finally {
    try {
      selector.close();
    }
 catch (    IOException e) {
    }
  }
}
