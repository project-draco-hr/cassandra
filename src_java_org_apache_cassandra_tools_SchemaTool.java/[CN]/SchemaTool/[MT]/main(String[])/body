{
  if (args.length < 3)   usage();
  if (args.length != 3 && "import".equals(args[2]))   usage();
  if (args.length != 4 && "export".equals(args[2]))   usage();
  System.out.println("# Note: This tool is deprecated and will be removed in future releases.");
  String host=args[0];
  int port=0;
  try {
    port=Integer.parseInt(args[1]);
  }
 catch (  NumberFormatException e) {
    System.err.println("Port must be a number.");
    System.exit(1);
  }
  if ("import".equals(args[2]))   new NodeProbe(host,port).loadSchemaFromYAML();
 else   if ("export".equals(args[2]))   System.out.println(new NodeProbe(host,port).exportSchemaToYAML());
 else   usage();
}
