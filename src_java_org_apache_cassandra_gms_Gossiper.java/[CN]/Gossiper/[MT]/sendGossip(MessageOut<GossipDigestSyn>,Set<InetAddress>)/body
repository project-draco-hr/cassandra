{
  List<InetAddress> liveEndpoints=ImmutableList.copyOf(epSet);
  int size=liveEndpoints.size();
  if (size < 1)   return false;
  int index=(size == 1) ? 0 : random.nextInt(size);
  InetAddress to=liveEndpoints.get(index);
  Long shutdownTimestamp=shutdownEndpoints.get(to);
  Integer shutdownAnnounce=Integer.getInteger("cassandra.shutdown_announce_in_ms",2000);
  if (shutdownTimestamp != null && (System.currentTimeMillis() - shutdownTimestamp) < (shutdownAnnounce * 2))   return false;
  if (logger.isTraceEnabled())   logger.trace("Sending a GossipDigestSyn to {} ...",to);
  MessagingService.instance().sendOneWay(message,to);
  return seeds.contains(to);
}
