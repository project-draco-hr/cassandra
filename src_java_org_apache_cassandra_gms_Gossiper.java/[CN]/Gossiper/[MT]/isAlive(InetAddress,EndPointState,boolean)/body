{
  epState.isAlive(value);
  if (value) {
    liveEndpoints_.add(addr);
    unreachableEndpoints_.remove(addr);
    for (    IEndPointStateChangeSubscriber subscriber : subscribers_)     subscriber.onAlive(addr,epState);
  }
 else {
    liveEndpoints_.remove(addr);
    unreachableEndpoints_.add(addr);
    for (    IEndPointStateChangeSubscriber subscriber : subscribers_)     subscriber.onDead(addr,epState);
  }
  if (epState.isAGossiper())   return;
  epState.isAGossiper(true);
}
