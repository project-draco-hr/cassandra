{
  validateTtl(column);
  try {
    AbstractType validator=DatabaseDescriptor.getValueValidator(keyspace,column_family,column.name);
    if (validator != null)     validator.validate(column.value);
  }
 catch (  MarshalException me) {
    throw new InvalidRequestException(String.format("[%s][%s][%s] = [%s] failed validation (%s)",keyspace,column_family,ByteBufferUtil.bytesToHex(column.name),ByteBufferUtil.bytesToHex(column.value),me.getMessage()));
  }
}
