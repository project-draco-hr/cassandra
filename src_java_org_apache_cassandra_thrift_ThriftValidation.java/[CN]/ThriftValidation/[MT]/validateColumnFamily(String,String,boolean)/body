{
  CFMetaData metadata=validateColumnFamily(keyspaceName,cfName);
  if (isCommutativeOp) {
    if (!metadata.isCounter())     throw new org.apache.cassandra.exceptions.InvalidRequestException("invalid operation for non commutative columnfamily " + cfName);
  }
 else {
    if (metadata.isCounter())     throw new org.apache.cassandra.exceptions.InvalidRequestException("invalid operation for commutative columnfamily " + cfName);
  }
  return metadata;
}
