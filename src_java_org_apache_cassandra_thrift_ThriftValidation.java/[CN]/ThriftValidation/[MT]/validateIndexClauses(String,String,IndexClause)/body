{
  if (index_clause.expressions.isEmpty())   throw new InvalidRequestException("index clause list may not be empty");
  Set<byte[]> indexedColumns=Table.open(keyspace).getColumnFamilyStore(columnFamily).getIndexedColumns();
  for (  IndexExpression expression : index_clause.expressions) {
    if (expression.op.equals(IndexOperator.EQ) && indexedColumns.contains(expression.column_name))     return;
  }
  throw new InvalidRequestException("No indexed columns present in index clause with operator EQ");
}
