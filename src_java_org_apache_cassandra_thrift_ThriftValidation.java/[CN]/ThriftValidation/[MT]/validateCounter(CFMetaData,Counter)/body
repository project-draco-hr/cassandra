{
  if (counter.column != null)   validateColumnPath(metadata,new ColumnPath(metadata.cfName).setSuper_column((ByteBuffer)null).setColumn(counter.column.name));
  if (counter.super_column != null) {
    for (    CounterColumn c : counter.super_column.columns)     validateColumnPath(metadata,new ColumnPath(metadata.cfName).setSuper_column(counter.super_column.name).setColumn(c.name));
  }
  if (counter.column == null && counter.super_column == null)   throw new InvalidRequestException("Counter must have one or both of column or super_column");
}
