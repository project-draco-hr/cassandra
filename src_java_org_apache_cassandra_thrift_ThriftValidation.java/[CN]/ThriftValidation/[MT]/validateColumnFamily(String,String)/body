{
  validateTable(tablename);
  if (cfName.isEmpty())   throw new org.apache.cassandra.exceptions.InvalidRequestException("non-empty columnfamily is required");
  CFMetaData metadata=Schema.instance.getCFMetaData(tablename,cfName);
  if (metadata == null)   throw new org.apache.cassandra.exceptions.InvalidRequestException("unconfigured columnfamily " + cfName);
  return metadata;
}
