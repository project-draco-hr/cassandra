{
  checkLoginAuthorized(AccessLevel.FULL);
  if (StageManager.getStage(StageManager.MIGRATION_STAGE).getQueue().size() > 0)   throw new InvalidRequestException("This node appears to be handling gossiped migrations.");
  try {
    DropColumnFamily drop=new DropColumnFamily(keyspace,column_family,true);
    drop.apply();
    drop.announce();
  }
 catch (  ConfigurationException e) {
    InvalidRequestException ex=new InvalidRequestException(e.getMessage());
    ex.initCause(e);
    throw ex;
  }
catch (  IOException e) {
    InvalidRequestException ex=new InvalidRequestException(e.getMessage());
    ex.initCause(e);
    throw ex;
  }
}
