{
  if (buffer == null) {
    target.append("null");
  }
 else {
    String s=deserialize(buffer);
    target.append('\'');
    for (int i=0; i < s.length(); i++) {
      char c=s.charAt(i);
      if (c == '\'')       target.append("''");
 else       target.append(c);
    }
    target.append('\'');
  }
}
