{
  RowUpdateBuilder adder=new RowUpdateBuilder(Events,FBUtilities.timestampMicros(),ttl,sessionId).clustering(UUIDGen.getTimeUUID());
  adder.add("activity",message);
  adder.add("source",FBUtilities.getBroadcastAddress());
  adder.add("thread",threadName);
  if (elapsed >= 0)   adder.add("source_elapsed",elapsed);
  return adder.build();
}
