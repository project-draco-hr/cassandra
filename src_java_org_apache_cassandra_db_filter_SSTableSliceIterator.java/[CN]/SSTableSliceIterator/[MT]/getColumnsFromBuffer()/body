{
  if (curCF == null)   curCF=reader.getEmptyColumnFamily().cloneMeShallow();
  curColumns.clear();
  while (true) {
    IColumn column=reader.pollColumn();
    if (column == null)     break;
    if (isColumnNeeded(column))     curColumns.add(column);
  }
  if (isAscending)   curColumnIndex=0;
 else   curColumnIndex=curColumns.size() - 1;
}
