{
  DecoratedKey key=StorageService.getPartitioner().decorateKey(getSchemaKSKey(ksName));
  ColumnFamilyStore schemaCFS=SystemTable.schemaCFS(SCHEMA_COLUMNFAMILIES_CF);
  ColumnFamily result=schemaCFS.getColumnFamily(key,DefsTable.searchComposite(cfName,true),DefsTable.searchComposite(cfName,false),false,Integer.MAX_VALUE);
  return new Row(key,result);
}
