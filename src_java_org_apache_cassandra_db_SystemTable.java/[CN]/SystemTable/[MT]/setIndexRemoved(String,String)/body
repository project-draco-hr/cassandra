{
  RowMutation rm=new RowMutation(Table.SYSTEM_TABLE,ByteBufferUtil.bytes(table));
  rm.delete(new QueryPath(INDEX_CF,null,ByteBufferUtil.bytes(indexName)),System.currentTimeMillis());
  try {
    rm.apply();
  }
 catch (  IOException e) {
    throw new IOError(e);
  }
  forceBlockingFlush(INDEX_CF);
}
