{
  ColumnFamilyStore cfs=Table.open(Table.SYSTEM_TABLE).getColumnFamilyStore(INDEX_CF);
  QueryFilter filter=QueryFilter.getNamesFilter(decorate(ByteBuffer.wrap(table.getBytes(UTF_8))),new QueryPath(INDEX_CF),ByteBuffer.wrap(indexName.getBytes(UTF_8)));
  return cfs.getColumnFamily(filter) != null;
}
