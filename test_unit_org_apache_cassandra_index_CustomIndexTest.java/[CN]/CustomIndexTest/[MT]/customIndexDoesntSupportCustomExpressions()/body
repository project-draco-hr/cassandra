{
  createTable("CREATE TABLE %s (a int, b int, c int, d int, PRIMARY KEY (a, b))");
  createIndex(String.format("CREATE CUSTOM INDEX custom_index ON %%s(c) USING '%s'",NoCustomExpressionsIndex.class.getName()));
  assertInvalidThrowMessage(Server.CURRENT_VERSION,String.format(IndexRestrictions.CUSTOM_EXPRESSION_NOT_SUPPORTED,"custom_index"),QueryValidationException.class,"SELECT * FROM %s WHERE expr(custom_index, 'foo bar baz')");
}
