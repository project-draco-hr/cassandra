{
  if (newPosition < 0)   throw new IllegalArgumentException("new position should not be negative");
  if (newPosition > length())   throw new IllegalArgumentException(String.format("unable to seek to position %d in %s (%d bytes) in read-only mode",newPosition,getPath(),length()));
  current=newPosition;
  if (newPosition > (bufferOffset + validBufferBytes) || newPosition < bufferOffset)   reBuffer();
}
