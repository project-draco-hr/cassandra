{
  try {
    OnDiskAtom atom=atomIterator.next();
    if (validateColumns)     atom.validateFields(columnFamily.metadata());
    return atom;
  }
 catch (  IOError e) {
    if (e.getCause() instanceof IOException)     throw new CorruptSSTableException((IOException)e.getCause(),filename);
 else     throw e;
  }
catch (  MarshalException me) {
    throw new CorruptSSTableException(me,filename);
  }
}
