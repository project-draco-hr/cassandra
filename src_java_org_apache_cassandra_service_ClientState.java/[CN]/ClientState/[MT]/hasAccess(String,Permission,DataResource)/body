{
  validateKeyspace(keyspace);
  if (internalCall)   return;
  validateLogin();
  preventSystemKSSchemaModification(keyspace,perm);
  if (perm.equals(Permission.SELECT) && READABLE_SYSTEM_RESOURCES.contains(resource))   return;
  if (PROTECTED_AUTH_RESOURCES.contains(resource))   throw new UnauthorizedException(String.format("Resource %s is inaccessible",resource));
  ensureHasPermission(perm,resource);
}
