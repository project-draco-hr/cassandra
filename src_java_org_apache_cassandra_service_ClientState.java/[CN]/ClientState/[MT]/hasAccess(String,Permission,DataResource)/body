{
  validateKeyspace(keyspace);
  if (isInternal)   return;
  validateLogin();
  preventSystemKSSchemaModification(keyspace,resource,perm);
  if ((perm == Permission.SELECT) && READABLE_SYSTEM_RESOURCES.contains(resource))   return;
  if (PROTECTED_AUTH_RESOURCES.contains(resource))   if ((perm == Permission.CREATE) || (perm == Permission.ALTER) || (perm == Permission.DROP))   throw new UnauthorizedException(String.format("%s schema is protected",resource));
  ensureHasPermission(perm,resource);
}
