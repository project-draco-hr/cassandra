{
  validateLogin();
  validateKeyspace();
  if (keyspace.equalsIgnoreCase("system"))   throw new InvalidRequestException("system keyspace is not user-modifiable");
  resourceClear();
  resource.add(keyspace);
  Set<Permission> perms=DatabaseDescriptor.getAuthority().authorize(user,resource);
  hasAccess(user,perms,perm,resource);
}
