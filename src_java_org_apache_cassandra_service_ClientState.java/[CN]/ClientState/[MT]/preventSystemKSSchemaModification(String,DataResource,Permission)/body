{
  if (!(perm.equals(Permission.ALTER) || perm.equals(Permission.DROP) || perm.equals(Permission.CREATE)))   return;
  if (Keyspace.SYSTEM_KS.equalsIgnoreCase(keyspace))   throw new UnauthorizedException(keyspace + " keyspace is not user-modifiable.");
  Set<String> allowAlter=Sets.newHashSet(Auth.AUTH_KS,Tracing.TRACE_KS);
  if (allowAlter.contains(keyspace.toLowerCase()) && !(resource.isKeyspaceLevel() && perm.equals(Permission.ALTER)))   throw new UnauthorizedException(String.format("Cannot %s %s",perm,resource));
}
