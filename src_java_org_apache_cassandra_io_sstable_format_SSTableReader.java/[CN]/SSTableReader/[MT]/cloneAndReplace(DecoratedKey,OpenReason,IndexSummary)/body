{
  SSTableReader replacement=internalOpen(descriptor,components,metadata,partitioner,ifile.sharedCopy(),dfile.sharedCopy(),newSummary,bf.sharedCopy(),maxDataAge,sstableMetadata,reason,header);
  replacement.first=newFirst;
  replacement.last=last;
  replacement.isSuspect.set(isSuspect.get());
  return replacement;
}
