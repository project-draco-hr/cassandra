{
  if (metadata.getBloomFilterFpChance() == 1.0) {
    load(false,true);
    bf=FilterFactory.AlwaysPresent;
  }
 else   if (!components.contains(Component.FILTER) || validation == null) {
    load(true,true);
  }
 else   if (validation.bloomFilterFPChance != metadata.getBloomFilterFpChance()) {
    load(true,true);
  }
 else {
    load(false,true);
    loadBloomFilter();
  }
}
