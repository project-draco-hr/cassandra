{
  try {
    CQLStatement statement=QueryProcessor.getPrepared(statementId);
    if (statement == null)     throw new PreparedQueryNotFoundException(statementId);
    if (resultPageSize == 0)     throw new ProtocolException("The page size cannot be 0");
    UUID tracingId=null;
    if (isTracingRequested()) {
      tracingId=UUIDGen.getTimeUUID();
      state.prepareTracingSession(tracingId);
    }
    if (state.traceNextQuery()) {
      state.createTracingSession();
      ImmutableMap.Builder<String,String> builder=ImmutableMap.builder();
      if (resultPageSize > 0)       builder.put("page_size",Integer.toString(resultPageSize));
      Tracing.instance.begin("Execute CQL3 prepared query",builder.build());
    }
    Message.Response response=QueryProcessor.processPrepared(statement,consistency,state,values,resultPageSize);
    if (tracingId != null)     response.setTracingId(tracingId);
    return response;
  }
 catch (  Exception e) {
    return ErrorMessage.fromException(e);
  }
 finally {
    Tracing.instance.stopSession();
    if (!state.hasPager())     state.getAndResetCurrentTracingSession();
  }
}
