{
  long currentTime=System.currentTimeMillis();
  Set<UUID> expired=new HashSet<>();
  for (  Map.Entry<UUID,ParentRepairSession> entry : parentRepairSessions.entrySet()) {
    ParentRepairSession session=entry.getValue();
    if (session.failed && currentTime - session.repairedAt > TimeUnit.HOURS.toMillis(24))     expired.add(entry.getKey());
  }
  for (  UUID remove : expired)   parentRepairSessions.remove(remove);
}
