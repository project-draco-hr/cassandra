{
  this.file=input;
  try {
    IndexHelper.skipBloomFilter(file);
    IndexHelper.skipIndex(file);
    emptyColumnFamily=ColumnFamily.serializer().deserializeFromSSTableNoColumns(ssTable.makeColumnFamily(),file);
    columns=file.readInt();
    mark=file.mark();
  }
 catch (  IOException e) {
    throw new IOError(e);
  }
}
