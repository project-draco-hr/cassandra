{
  if (chunkLength != null) {
    if (chunkLength <= 0)     throw new ConfigurationException("Invalid negative or null " + CHUNK_LENGTH_IN_KB);
    int c=chunkLength;
    boolean found=false;
    while (c != 0) {
      if ((c & 0x01) != 0) {
        if (found)         throw new ConfigurationException(CHUNK_LENGTH_IN_KB + " must be a power of 2");
 else         found=true;
      }
      c>>=1;
    }
  }
  validateCrcCheckChance(crcCheckChance);
}
