{
  ColumnFamilyStore cfs=Table.open(command.keyspace).getColumnFamilyStore(command.column_family);
  IFilter columnFilter=QueryFilter.getFilter(command.predicate,cfs.getComparator());
  if (cfs.indexManager.hasIndexFor(command.row_filter))   return cfs.search(command.row_filter,command.range,command.maxResults,columnFilter,command.maxIsColumns);
 else   return cfs.getRangeSlice(command.super_column,command.range,command.maxResults,columnFilter,command.row_filter,command.maxIsColumns);
}
