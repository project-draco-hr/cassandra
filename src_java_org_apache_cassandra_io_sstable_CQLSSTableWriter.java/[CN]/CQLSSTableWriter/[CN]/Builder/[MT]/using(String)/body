{
  if (schema == null)   throw new IllegalStateException("You need to define the schema by calling forTable() prior to this call.");
  Pair<UpdateStatement,List<ColumnSpecification>> p=getStatement(insertStatement,UpdateStatement.class,"INSERT");
  this.insert=p.left;
  this.boundNames=p.right;
  if (this.insert.hasConditions())   throw new IllegalArgumentException("Conditional statements are not supported");
  if (this.boundNames.isEmpty())   throw new IllegalArgumentException("Provided insert statement has no bind variables");
  return this;
}
