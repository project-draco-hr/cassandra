{
  try {
    this.schema=getStatement(schema,CreateTableStatement.class,"CREATE TABLE").left.getCFMetaData().rebuild();
    KSMetaData ksm=KSMetaData.newKeyspace(this.schema.ksName,AbstractReplicationStrategy.getClass("org.apache.cassandra.locator.SimpleStrategy"),ImmutableMap.of("replication_factor","1"),true,Collections.singleton(this.schema));
    Schema.instance.load(ksm);
    return this;
  }
 catch (  RequestValidationException e) {
    throw new IllegalArgumentException(e.getMessage(),e);
  }
}
