if (__name__ == '__main__'):
    from wsgiref.simple_server import make_server
    from optparse import OptionParser
    parser = OptionParser()
    parser.add_option('-a', '--address', dest='host', help='Host address on which to listen', default='localhost')
    parser.add_option('-p', '--port', dest='port', help='Port on which to listen', default='8111')
    (options, args) = parser.parse_args()
