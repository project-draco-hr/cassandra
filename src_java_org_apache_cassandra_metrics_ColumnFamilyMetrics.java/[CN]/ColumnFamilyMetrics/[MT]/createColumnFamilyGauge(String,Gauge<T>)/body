{
  return createColumnFamilyGauge(name,gauge,new Gauge<Long>(){
    public Long value(){
      long total=0;
      for (      Metric cfGauge : allColumnFamilyMetrics.get(name)) {
        total=total + ((Gauge<? extends Number>)cfGauge).value().longValue();
      }
      return total;
    }
  }
);
}
