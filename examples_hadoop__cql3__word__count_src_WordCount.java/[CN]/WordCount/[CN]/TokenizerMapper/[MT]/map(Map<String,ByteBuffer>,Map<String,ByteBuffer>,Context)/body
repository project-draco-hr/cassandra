{
  for (  Entry<String,ByteBuffer> column : columns.entrySet()) {
    if (!"body".equalsIgnoreCase(column.getKey()))     continue;
    String value=ByteBufferUtil.string(column.getValue());
    logger.debug("read {}:{}={} from {}",new Object[]{toString(keys),column.getKey(),value,context.getInputSplit()});
    StringTokenizer itr=new StringTokenizer(value);
    while (itr.hasMoreTokens()) {
      word.set(itr.nextToken());
      context.write(word,one);
    }
  }
}
