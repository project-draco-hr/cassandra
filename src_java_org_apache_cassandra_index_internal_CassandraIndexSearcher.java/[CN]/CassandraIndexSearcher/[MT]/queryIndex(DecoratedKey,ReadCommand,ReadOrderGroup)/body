{
  ClusteringIndexFilter filter=makeIndexFilter(command);
  ColumnFamilyStore indexCfs=index.getBackingTable().get();
  CFMetaData indexCfm=indexCfs.metadata;
  return SinglePartitionReadCommand.create(indexCfm,command.nowInSec(),indexKey,ColumnFilter.all(indexCfm),filter).queryMemtableAndDisk(indexCfs,orderGroup.indexReadOpOrderGroup());
}
