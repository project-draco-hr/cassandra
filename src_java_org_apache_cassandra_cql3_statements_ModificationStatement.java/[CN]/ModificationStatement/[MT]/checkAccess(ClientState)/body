{
  state.hasColumnFamilyAccess(keyspace(),columnFamily(),Permission.MODIFY);
  if (hasConditions())   state.hasColumnFamilyAccess(keyspace(),columnFamily(),Permission.SELECT);
  Iterator<ViewDefinition> views=View.findAll(keyspace(),columnFamily()).iterator();
  if (views.hasNext()) {
    state.hasColumnFamilyAccess(keyspace(),columnFamily(),Permission.SELECT);
    do {
      state.hasColumnFamilyAccess(keyspace(),views.next().viewName,Permission.MODIFY);
    }
 while (views.hasNext());
  }
  for (  Function function : getFunctions())   state.ensureHasPermission(Permission.EXECUTE,function);
}
