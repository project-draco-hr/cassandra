{
  String className=name.contains(".") ? name : "org.apache.cassandra.db.compaction." + name;
  Class<AbstractCompactionStrategy> strategyClass=FBUtilities.classForName(className,"compaction strategy");
  if (!AbstractCompactionStrategy.class.isAssignableFrom(strategyClass)) {
    throw new ConfigurationException(format("Compaction strategy class %s is not derived from AbstractReplicationStrategy",className));
  }
  return strategyClass;
}
