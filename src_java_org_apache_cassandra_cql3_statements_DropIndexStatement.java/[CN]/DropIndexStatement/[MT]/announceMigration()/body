{
  CfDef cfDef=null;
  KSMetaData ksm=Schema.instance.getTableDefinition(keyspace());
  for (  CFMetaData cfm : ksm.cfMetaData().values()) {
    cfDef=getUpdatedCFDef(cfm.toThrift());
    if (cfDef != null)     break;
  }
  if (cfDef == null)   throw new InvalidRequestException("Index '" + index + "' could not be found in any of the column families of keyspace '"+ keyspace()+ "'");
  MigrationManager.announceColumnFamilyUpdate(CFMetaData.fromThrift(cfDef));
}
