{
  KSMetaData ksm=Schema.instance.getKSMetaData(keyspace());
  if (ksm == null)   throw new KeyspaceNotDefinedException("Keyspace " + keyspace() + " does not exist");
  for (  CFMetaData cfm : ksm.cfMetaData().values()) {
    if (findIndexedColumn(cfm) != null)     return cfm;
  }
  if (ifExists)   return null;
 else   throw new InvalidRequestException("Index '" + indexName + "' could not be found in any of the tables of keyspace '"+ keyspace()+ '\'');
}
