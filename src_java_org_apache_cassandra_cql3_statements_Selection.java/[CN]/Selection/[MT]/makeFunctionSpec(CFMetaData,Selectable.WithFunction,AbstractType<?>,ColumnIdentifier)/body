{
  if (returnType == null)   throw new InvalidRequestException(String.format("Unknown function %s called in selection clause",fun.namespace.isEmpty() ? fun.functionName : fun.namespace + "::" + fun.functionName));
  return new ColumnSpecification(cfm.ksName,cfm.cfName,alias == null ? new ColumnIdentifier(fun.toString(),true) : alias,returnType);
}
