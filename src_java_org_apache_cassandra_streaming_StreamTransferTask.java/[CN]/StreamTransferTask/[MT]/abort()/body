{
  if (aborted)   return;
  aborted=true;
  for (  ScheduledFuture future : timeoutTasks.values())   future.cancel(false);
  timeoutTasks.clear();
  Throwable fail=null;
  for (  OutgoingFileMessage file : files.values()) {
    try {
      file.sstable.releaseReference();
    }
 catch (    Throwable t) {
      if (fail == null)       fail=t;
 else       fail.addSuppressed(t);
    }
  }
  files.clear();
  if (fail != null)   Throwables.propagate(fail);
}
