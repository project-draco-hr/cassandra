{
  ThriftValidation.validateColumnFamily(keyspace(),columnFamily());
  CFMetaData cfm=Schema.instance.getCFMetaData(keyspace(),columnFamily());
  if (cfm.getTriggerClasses() == null)   throw new RequestValidationException(ExceptionCode.CONFIG_ERROR,"No triggers found"){
  }
;
  if (!TriggerOptions.hasTrigger(cfm,triggerName))   throw new RequestValidationException(ExceptionCode.CONFIG_ERROR,"trigger: " + triggerName + ", not found"){
  }
;
}
