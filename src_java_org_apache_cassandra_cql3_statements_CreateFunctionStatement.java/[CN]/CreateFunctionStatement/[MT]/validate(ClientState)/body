{
  if (!DatabaseDescriptor.enableUserDefinedFunctions())   throw new InvalidRequestException("User-defined-functions are disabled in cassandra.yaml - set enable_user_defined_functions=true to enable if you are aware of the security risks");
  if (ifNotExists && orReplace)   throw new InvalidRequestException("Cannot use both 'OR REPLACE' and 'IF NOT EXISTS' directives");
  if (Schema.instance.getKSMetaData(functionName.keyspace) == null)   throw new InvalidRequestException(String.format("Cannot add function '%s' to non existing keyspace '%s'.",functionName.name,functionName.keyspace));
}
