{
  long writeSize;
  Directories.DataDirectory directory;
  while (true) {
    writeSize=getExpectedWriteSize();
    directory=getDirectories().getWriteableLocation(writeSize);
    if (directory != null || !reduceScopeForLimitedSpace())     break;
  }
  if (directory == null)   throw new RuntimeException("Insufficient disk space to write " + writeSize + " bytes");
  runWith(getDirectories().getLocationForDisk(directory));
}
