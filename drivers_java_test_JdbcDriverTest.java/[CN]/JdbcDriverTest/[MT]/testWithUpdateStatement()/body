{
  try {
    final String updateQ="UPDATE Standard1 SET \"firstN\" = \"jdbc\", \"lastN\" = \"m\" WHERE KEY = \"jsmith\"";
    withUpdateStatement(con,updateQ);
    final String updateSelect="SELECT \"firstN\", \"lastN\" FROM Standard1 WHERE KEY=\"jsmith\"";
