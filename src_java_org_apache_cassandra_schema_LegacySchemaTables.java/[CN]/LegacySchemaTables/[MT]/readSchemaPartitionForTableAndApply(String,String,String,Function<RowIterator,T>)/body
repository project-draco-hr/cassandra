{
  ColumnFamilyStore store=getSchemaCFS(schemaTableName);
  ClusteringComparator comparator=store.metadata.comparator;
  Slices slices=Slices.with(comparator,Slice.make(comparator,tableName));
  int nowInSec=FBUtilities.nowInSeconds();
  try (OpOrder.Group op=store.readOrdering.start();RowIterator partition=UnfilteredRowIterators.filter(SinglePartitionSliceCommand.create(store.metadata,nowInSec,getSchemaKSDecoratedKey(keyspaceName),slices).queryMemtableAndDisk(store,op),nowInSec)){
    return fct.apply(partition);
  }
 }
