{
  Runnable deleter=new WrappedRunnable(){
    @Override protected void runMayThrow() throws IOException {
      if (!new File(file).delete()) {
        if (retryCount > MAX_RETRIES)         throw new IOException("Unable to delete " + file + " after "+ MAX_RETRIES+ " tries");
        new Thread(new Runnable(){
          public void run(){
            try {
              Thread.sleep(10000);
            }
 catch (            InterruptedException e) {
              throw new AssertionError(e);
            }
            submitDeleteWithRetry(file,retryCount + 1);
          }
        }
,"Delete submission: " + file).start();
      }
    }
  }
;
  executor.submit(deleter);
}
