def format_value(self, val):
    if ((val is None) or (val == EMPTY)):
        return format_value_default(self.nullval, colormap=NO_COLOR_MAP)
    ctype = type(val)
    formatter = self.formatters.get(ctype, None)
    if (not formatter):
        formatter = get_formatter(ctype)
        self.formatters[ctype] = formatter
    return formatter(val, encoding=self.encoding, colormap=NO_COLOR_MAP, date_time_format=self.date_time_format, float_precision=self.float_precision, nullval=self.nullval, quote=False)
