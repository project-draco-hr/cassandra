{
  this.klass=klass;
  T[] values=klass.getEnumConstants();
  int maxId=-1;
  for (  T opt : values)   maxId=Math.max(maxId,opt.getId());
  ids=(T[])Array.newInstance(klass,maxId + 1);
  for (  T opt : values) {
    if (ids[opt.getId()] != null)     throw new IllegalStateException(String.format("Duplicate option id %d",opt.getId()));
    ids[opt.getId()]=opt;
  }
}
