{
  while (true) {
    Region region=currentRegion.get();
    if (region != null)     return region;
    region=new Region(REGION_SIZE);
    if (currentRegion.compareAndSet(null,region)) {
      region.init();
      regionCount++;
      logger.debug("{} regions now allocated in {}",regionCount,this);
      return region;
    }
  }
}
