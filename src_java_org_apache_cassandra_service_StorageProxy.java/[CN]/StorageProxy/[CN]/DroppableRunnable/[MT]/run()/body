{
  try {
    if (TimeUnit.NANOSECONDS.toMillis(System.nanoTime() - constructionTime) > DatabaseDescriptor.getTimeout(verb)) {
      MessagingService.instance().incrementDroppedMessages(verb);
      return;
    }
    try {
      runMayThrow();
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
  }
  finally {
    cleanup();
  }
}
