{
  if (!DatabaseDescriptor.hintedHandoffEnabled())   return false;
  boolean hintWindowExpired=Gossiper.instance.getEndpointDowntime(ep) > DatabaseDescriptor.getMaxHintWindow();
  if (hintWindowExpired)   logger.trace("not hinting {} which has been down {}ms",ep,Gossiper.instance.getEndpointDowntime(ep));
  return !hintWindowExpired;
}
