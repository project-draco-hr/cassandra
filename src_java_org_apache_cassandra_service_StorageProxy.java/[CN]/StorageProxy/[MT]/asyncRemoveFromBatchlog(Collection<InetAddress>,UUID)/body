{
  AbstractWriteResponseHandler handler=new WriteResponseHandler(endpoints,Collections.<InetAddress>emptyList(),ConsistencyLevel.ANY,Keyspace.open(SystemKeyspace.NAME),null,WriteType.SIMPLE);
  Mutation mutation=new Mutation(SystemKeyspace.NAME,UUIDType.instance.decompose(uuid));
  mutation.delete(SystemKeyspace.BATCHLOG,FBUtilities.timestampMicros());
  MessageOut<Mutation> message=mutation.createMessage();
  for (  InetAddress target : endpoints) {
    if (target.equals(FBUtilities.getBroadcastAddress()) && OPTIMIZE_LOCAL_REQUESTS)     insertLocal(message.payload,handler);
 else     MessagingService.instance().sendRR(message,target,handler,false);
  }
}
