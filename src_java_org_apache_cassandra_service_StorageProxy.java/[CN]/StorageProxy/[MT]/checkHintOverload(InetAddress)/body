{
  if (StorageMetrics.totalHintsInProgress.count() > maxHintsInProgress && (getHintsInProgressFor(destination).get() > 0 && shouldHint(destination))) {
    throw new OverloadedException("Too many in flight hints: " + StorageMetrics.totalHintsInProgress.count() + " destination: "+ destination+ " destination hints: "+ getHintsInProgressFor(destination).get());
  }
}
