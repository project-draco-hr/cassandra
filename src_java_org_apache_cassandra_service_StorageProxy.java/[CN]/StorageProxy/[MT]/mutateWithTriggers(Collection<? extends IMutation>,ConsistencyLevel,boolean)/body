{
  Collection<Mutation> augmented=TriggerExecutor.instance.execute(mutations);
  boolean updatesView=Keyspace.open(mutations.iterator().next().getKeyspaceName()).viewManager.updatesAffectView(mutations,true);
  if (augmented != null)   mutateAtomically(augmented,consistencyLevel,updatesView);
 else {
    if (mutateAtomically || updatesView)     mutateAtomically((Collection<Mutation>)mutations,consistencyLevel,updatesView);
 else     mutate(mutations,consistencyLevel);
  }
}
