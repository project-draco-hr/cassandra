{
  for (  SSTableReader sstable : newSSTables) {
    if (logger.isDebugEnabled())     logger.debug(String.format("adding %s to list of files tracked for %s.%s",sstable.descriptor,cfstore.table.name,cfstore.getColumnFamilyName()));
    long size=sstable.bytesOnDisk();
    StorageMetrics.load.inc(size);
    cfstore.metric.liveDiskSpaceUsed.inc(size);
    cfstore.metric.totalDiskSpaceUsed.inc(size);
    sstable.setTrackedBy(this);
  }
}
