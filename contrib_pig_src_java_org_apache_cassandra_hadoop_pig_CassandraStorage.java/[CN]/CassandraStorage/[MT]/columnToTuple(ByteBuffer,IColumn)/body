{
  Tuple pair=TupleFactory.getInstance().newTuple(2);
  pair.set(0,new DataByteArray(name.array(),name.position() + name.arrayOffset(),name.limit() + name.arrayOffset()));
  if (col instanceof Column) {
    pair.set(1,new DataByteArray(col.value().array(),col.value().position() + col.value().arrayOffset(),col.value().limit() + col.value().arrayOffset()));
    return pair;
  }
  ArrayList<Tuple> subcols=new ArrayList<Tuple>();
  for (  IColumn subcol : ((SuperColumn)col).getSubColumns())   subcols.add(columnToTuple(subcol.name(),subcol));
  pair.set(1,new DefaultDataBag(subcols));
  return pair;
}
