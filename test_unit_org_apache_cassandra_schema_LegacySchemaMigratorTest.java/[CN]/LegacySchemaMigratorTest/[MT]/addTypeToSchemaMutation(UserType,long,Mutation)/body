{
  RowUpdateBuilder adder=new RowUpdateBuilder(SystemKeyspace.LegacyUsertypes,timestamp,mutation).clustering(type.getNameAsString());
  adder.resetCollection("field_names").resetCollection("field_types");
  for (int i=0; i < type.size(); i++) {
    adder.addListEntry("field_names",type.fieldName(i)).addListEntry("field_types",type.fieldType(i).toString());
  }
  adder.build();
}
