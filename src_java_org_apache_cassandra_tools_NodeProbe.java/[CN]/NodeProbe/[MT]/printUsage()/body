{
  HelpFormatter hf=new HelpFormatter();
  String header=String.format("%nAvailable commands: ring, info, cleanup, compact, cfstats, snapshot [name], clearsnapshot, " + "tpstats, flush, decommission, move, " + " getcompactionthreshold, setcompactionthreshold [minthreshold] ([maxthreshold])");
  String usage=String.format("java %s -host <arg> <command>%n",NodeProbe.class.getName());
  hf.printHelp(usage,"",options,header);
}
