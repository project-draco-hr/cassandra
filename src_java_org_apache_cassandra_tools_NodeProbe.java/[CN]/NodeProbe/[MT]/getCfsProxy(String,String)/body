{
  ColumnFamilyStoreMBean cfsProxy=null;
  try {
    cfsProxy=JMX.newMBeanProxy(mbeanServerConn,new ObjectName("org.apache.cassandra.db:type=ColumnFamilies,keyspace=" + ks + ",columnfamily="+ cf),ColumnFamilyStoreMBean.class);
  }
 catch (  MalformedObjectNameException mone) {
    System.err.println("ColumnFamilyStore for " + ks + "/"+ cf+ " not found.");
    System.exit(1);
  }
  return cfsProxy;
}
