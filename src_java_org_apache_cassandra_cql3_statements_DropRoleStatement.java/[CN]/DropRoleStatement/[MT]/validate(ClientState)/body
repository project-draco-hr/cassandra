{
  state.ensureNotAnonymous();
  if (!ifExists && !DatabaseDescriptor.getRoleManager().isExistingRole(role))   throw new InvalidRequestException(String.format("%s doesn't exist",role));
  AuthenticatedUser user=state.getUser();
  if (user != null && user.getName().equals(role))   throw new InvalidRequestException("Cannot DROP primary role for current login");
}
