{
  if (def == null)   def=metadata.get(String.format("%s.%s",keyspace,columnFamily));
  if (def == null)   throw new AssertionError();
switch (specifier) {
case ColumnSpecific:
    return def.getValueValidator(ByteBuffer.wrap(column));
case Validator:
  return def.getDefaultValidator();
case Comparator:
return def.comparator;
default :
throw new AssertionError();
}
}
