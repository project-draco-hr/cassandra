{
  Callable<?> task=new Callable(){
    public Object call() throws IOException {
      createNewSegment();
      return null;
    }
  }
;
  try {
    executor.submit(task).get();
  }
 catch (  InterruptedException e) {
    throw new AssertionError(e);
  }
catch (  ExecutionException e) {
    throw new RuntimeException(e);
  }
}
