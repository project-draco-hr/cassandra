{
  Keyspace keyspace=Keyspace.open(Keyspace.SYSTEM_KS);
  QueryFilter filter=QueryFilter.getSliceFilter(decorate(ALL_LOCAL_NODE_ID_KEY),COUNTER_ID_CF,Composites.EMPTY,Composites.EMPTY,true,1,System.currentTimeMillis());
  ColumnFamily cf=keyspace.getColumnFamilyStore(COUNTER_ID_CF).getColumnFamily(filter);
  if (cf != null && cf.getColumnCount() != 0)   return CounterId.wrap(cf.iterator().next().name().toByteBuffer());
 else   return null;
}
