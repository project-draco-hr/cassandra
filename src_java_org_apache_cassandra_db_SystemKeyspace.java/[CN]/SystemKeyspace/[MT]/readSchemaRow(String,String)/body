{
  DecoratedKey key=StorageService.getPartitioner().decorateKey(getSchemaKSKey(ksName));
  ColumnFamilyStore schemaCFS=SystemKeyspace.schemaCFS(SCHEMA_COLUMNFAMILIES_CF);
  ColumnFamily result=schemaCFS.getColumnFamily(key,DefsTables.searchComposite(cfName,true),DefsTables.searchComposite(cfName,false),false,Integer.MAX_VALUE,System.currentTimeMillis());
  return new Row(key,result);
}
