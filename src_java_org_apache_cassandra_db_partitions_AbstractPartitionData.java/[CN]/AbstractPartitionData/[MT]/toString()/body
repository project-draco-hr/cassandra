{
  StringBuilder sb=new StringBuilder();
  CFMetaData metadata=metadata();
  sb.append(String.format("Partition[%s.%s] key=%s columns=%s deletion=%s",metadata.ksName,metadata.cfName,metadata.getKeyValidator().getString(partitionKey().getKey()),columns(),deletionInfo));
  if (staticRow() != Rows.EMPTY_STATIC_ROW)   sb.append("\n    ").append(staticRow().toString(metadata,true));
  Iterator<Row> iterator=createRowIterator(null,false);
  while (iterator.hasNext())   sb.append("\n    ").append(iterator.next().toString(metadata,true));
  return sb.toString();
}
