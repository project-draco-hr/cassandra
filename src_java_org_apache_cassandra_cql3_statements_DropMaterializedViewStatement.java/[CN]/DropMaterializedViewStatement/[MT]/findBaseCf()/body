{
  KeyspaceMetadata ksm=Schema.instance.getKSMetaData(keyspace());
  if (ksm == null)   throw new KeyspaceNotDefinedException("Keyspace " + keyspace() + " does not exist");
  for (  CFMetaData cfm : ksm.tables) {
    if (cfm.getMaterializedViews().get(columnFamily()).isPresent())     return cfm;
  }
  if (ifExists)   return null;
 else   throw new InvalidRequestException("View '" + cfName + "' could not be found in any of the tables of keyspace '"+ keyspace()+ '\'');
}
