{
  if (isJceks)   keyAlias=keyAlias.toLowerCase();
  Key key;
  try {
    String password=options.get(PROP_KEY_PW);
    if (password == null || password.isEmpty())     password=options.get(PROP_KEYSTORE_PW);
    key=store.getKey(keyAlias,password.toCharArray());
  }
 catch (  Exception e) {
    throw new IOException("unable to load key from keystore");
  }
  if (key == null)   throw new IOException(String.format("key %s was not found in keystore",keyAlias));
  return key;
}
