{
  RowUpdateBuilder adder=new RowUpdateBuilder(Columns,timestamp,mutation).clustering(table.cfName,column.name.toString());
  adder.add("column_name_bytes",column.name.bytes).add("validator",column.type.toString()).add("type",column.kind.toString().toLowerCase()).add("component_index",column.isOnAllComponents() ? null : column.position()).add("index_name",column.getIndexName()).add("index_type",column.getIndexType() == null ? null : column.getIndexType().toString()).add("index_options",json(column.getIndexOptions())).build();
}
