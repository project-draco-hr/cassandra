{
  RowUpdateBuilder adder=new RowUpdateBuilder(Columns,timestamp,mutation).clustering(table.cfName,column.name.toString());
  adder.add("column_name_bytes",column.name.bytes).add("kind",column.kind.toString().toLowerCase()).add("position",column.isOnAllComponents() ? ColumnDefinition.NO_POSITION : column.position()).add("type",column.type.toString()).build();
}
