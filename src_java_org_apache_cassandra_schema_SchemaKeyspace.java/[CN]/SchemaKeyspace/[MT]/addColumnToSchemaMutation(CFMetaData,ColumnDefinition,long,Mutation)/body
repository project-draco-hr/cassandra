{
  RowUpdateBuilder adder=new RowUpdateBuilder(Columns,timestamp,mutation).clustering(table.cfName,column.name.toString());
  adder.add("column_name_bytes",column.name.bytes).add("validator",column.type.toString()).add("type",column.kind.toString().toLowerCase()).add("component_index",column.isOnAllComponents() ? null : column.position()).build();
}
