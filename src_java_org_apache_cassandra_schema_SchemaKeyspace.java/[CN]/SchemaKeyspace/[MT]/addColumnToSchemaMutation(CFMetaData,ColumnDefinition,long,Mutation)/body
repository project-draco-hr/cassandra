{
  RowUpdateBuilder adder=new RowUpdateBuilder(Columns,timestamp,mutation).clustering(table.cfName,column.name.toString());
  AbstractType<?> type=column.type;
  if (type instanceof ReversedType)   type=((ReversedType)type).baseType;
  adder.add("column_name_bytes",column.name.bytes).add("kind",column.kind.toString().toLowerCase()).add("position",column.position()).add("clustering_order",column.clusteringOrder().toString().toLowerCase()).add("type",type.asCQL3Type().toString()).build();
}
