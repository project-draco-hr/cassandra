{
  RowUpdateBuilder adder=new RowUpdateBuilder(Functions,timestamp,mutation).clustering(function.name().name,functionSignatureWithTypes(function));
  adder.add("body",function.body()).add("language",function.language()).add("return_type",function.returnType().toString()).add("called_on_null_input",function.isCalledOnNullInput());
  adder.resetCollection("argument_names").resetCollection("argument_types");
  for (int i=0; i < function.argNames().size(); i++) {
    adder.addListEntry("argument_names",function.argNames().get(i).bytes);
    adder.addListEntry("argument_types",function.argTypes().get(i).toString());
  }
  adder.build();
}
