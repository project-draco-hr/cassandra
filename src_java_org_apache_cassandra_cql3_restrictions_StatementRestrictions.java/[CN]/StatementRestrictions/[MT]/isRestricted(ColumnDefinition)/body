{
  if (notNullColumns.contains(column))   return true;
 else   if (column.isPartitionKey())   return partitionKeyRestrictions.getColumnDefs().contains(column);
 else   if (column.isClusteringColumn())   return clusteringColumnsRestrictions.getColumnDefs().contains(column);
 else   return nonPrimaryKeyRestrictions.getColumnDefs().contains(column);
}
