{
  StorageHelper.setConnectionInformation(conf);
  if (System.getenv(StorageHelper.PIG_INPUT_FORMAT) != null)   inputFormatClass=getFullyQualifiedClassName(System.getenv(StorageHelper.PIG_INPUT_FORMAT));
 else   inputFormatClass=DEFAULT_INPUT_FORMAT;
  if (System.getenv(StorageHelper.PIG_OUTPUT_FORMAT) != null)   outputFormatClass=getFullyQualifiedClassName(System.getenv(StorageHelper.PIG_OUTPUT_FORMAT));
 else   outputFormatClass=DEFAULT_OUTPUT_FORMAT;
}
