{
  int instances=0;
  try (ISSTableScanner partitions=reader.getScanner()){
    while (partitions.hasNext()) {
      try (UnfilteredRowIterator iter=partitions.next()){
        while (iter.hasNext()) {
          Unfiltered atom=iter.next();
          if (predicate.test(atom))           ++instances;
        }
      }
     }
  }
   return instances;
}
