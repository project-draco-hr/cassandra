{
  while (true) {
    AtomicInteger c;
    try (OpOrder.Group opGroup=order.start()){
      if (null == (c=count.get(opGroup))) {
        count.putIfAbsent(opGroup,new AtomicInteger());
        c=count.get(opGroup);
      }
      c.incrementAndGet();
      State s=state;
      while (!s.accept(opGroup))       s=s.replacement;
    }
   }
}
