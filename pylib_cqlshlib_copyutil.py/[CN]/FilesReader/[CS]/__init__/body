def __init__(self, fname, options):
    self.chunk_size = options.copy['chunksize']
    self.header = options.copy['header']
    self.max_rows = options.copy['maxrows']
    self.skip_rows = options.copy['skiprows']
    self.fname = fname
    self.sources = None
    self.num_sources = 0
    self.current_source = None
    self.num_read = 0
