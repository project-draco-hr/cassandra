{
  if (includeAllColumns)   return true;
  if (!partition.deletionInfo().isLive())   return true;
  for (  Row row : partition) {
    if (row.hasComplexDeletion())     return true;
    if (!row.deletion().isLive())     return true;
    for (    ColumnData data : row) {
      if (definition.metadata.getColumnDefinition(data.column().name) != null)       return true;
    }
  }
  return false;
}
