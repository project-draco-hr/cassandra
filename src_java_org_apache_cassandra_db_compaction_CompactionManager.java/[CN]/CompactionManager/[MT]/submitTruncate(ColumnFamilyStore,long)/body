{
  Runnable runnable=new Runnable(){
    public void run(){
      compactionLock.writeLock().lock();
      try {
        ReplayPosition replayAfter=main.discardSSTables(truncatedAt);
        for (        SecondaryIndex index : main.indexManager.getIndexes())         index.truncate(truncatedAt);
        SystemTable.saveTruncationPosition(main,replayAfter);
        for (        RowCacheKey key : CacheService.instance.rowCache.getKeySet()) {
          if (key.cfId == main.metadata.cfId)           CacheService.instance.rowCache.remove(key);
        }
      }
  finally {
        compactionLock.writeLock().unlock();
      }
    }
  }
;
  return executor.submit(runnable);
}
