{
  FileUtils.createDirectory(compactionFileLocation);
  int minLevel=Integer.MAX_VALUE;
  for (  SSTableReader sstable : sstables) {
    if (minLevel == Integer.MAX_VALUE)     minLevel=sstable.getSSTableLevel();
    if (minLevel != sstable.getSSTableLevel()) {
      minLevel=0;
      break;
    }
  }
  return SSTableWriter.create(Descriptor.fromFilename(cfs.getSSTablePath(compactionFileLocation)),(long)expectedBloomFilterSize,repairedAt,cfs.metadata,new MetadataCollector(sstables,cfs.metadata.comparator,minLevel),SerializationHeader.make(cfs.metadata,sstables),txn);
}
