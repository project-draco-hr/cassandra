{
  SocketChannel channel=SocketChannel.open(new InetSocketAddress(to,DatabaseDescriptor.getStoragePort()));
  try {
    stream(channel);
  }
  finally {
    try {
      channel.close();
    }
 catch (    IOException e) {
      if (logger.isDebugEnabled())       logger.debug("error closing socket",e);
    }
  }
  if (logger.isDebugEnabled())   logger.debug("Done streaming " + file);
}
