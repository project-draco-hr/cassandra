{
  super(timer,generator,settings,partitionCount);
  this.generator=generator;
  this.statement=statement;
  this.thriftId=thriftId;
  this.cl=cl;
  this.validationType=validationType;
  argumentIndex=new int[statement.getVariables().size()];
  bindBuffer=new Object[argumentIndex.length];
  int i=0;
  for (  ColumnDefinitions.Definition definition : statement.getVariables())   argumentIndex[i++]=generator.indexOf(definition.getName());
}
