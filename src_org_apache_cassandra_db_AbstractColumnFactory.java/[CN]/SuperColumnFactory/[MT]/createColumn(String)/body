{
  String[] values=SuperColumnFactory.getSuperColumnAndColumn(name);
  if (values.length == 0 || values.length > 2)   throw new IllegalArgumentException("Super Column " + name + " in invalid format. Must be in <super column name>:<column name> format.");
  IColumn superColumn=new SuperColumn(values[0]);
  if (values.length == 2) {
    IColumn subColumn=new Column(values[1]);
    superColumn.addColumn(values[1],subColumn);
  }
  return superColumn;
}
