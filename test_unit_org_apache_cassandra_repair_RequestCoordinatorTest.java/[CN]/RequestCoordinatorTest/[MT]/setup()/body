{
  endpoints=new InetAddress[12];
  for (int i=0; i < 12; i++)   endpoints[i]=InetAddress.getByName("127.0.0." + (i + 1));
  activeRequests=new ArrayList<>();
  DatabaseDescriptor.setEndpointSnitch(new AbstractEndpointSnitch(){
    @Override public String getRack(    InetAddress endpoint){
      return "rack1";
    }
    @Override public String getDatacenter(    InetAddress endpoint){
      int no=endpoint.getAddress()[3] - 1;
      return "datacenter" + (no / 3 + 1);
    }
    @Override public int compareEndpoints(    InetAddress target,    InetAddress a1,    InetAddress a2){
      return 0;
    }
  }
);
}
