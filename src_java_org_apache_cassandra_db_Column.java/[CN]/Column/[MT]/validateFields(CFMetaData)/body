{
  validateName(metadata);
  CFDefinition cfdef=metadata.getCfDef();
  ByteBuffer internalName=(cfdef.isComposite && !cfdef.isCompact) ? ((CompositeType)metadata.comparator).extractLastComponent(name) : name;
  AbstractType<?> valueValidator=metadata.getValueValidator(internalName);
  if (valueValidator != null)   valueValidator.validate(value());
}
