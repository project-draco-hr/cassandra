{
  state.ensureNotAnonymous();
  if (!DatabaseDescriptor.getRoleManager().isExistingRole(grantee))   throw new InvalidRequestException(String.format("Role %s doesn't exist",grantee));
  resource=maybeCorrectResource(resource,state);
  if (!resource.exists())   throw new InvalidRequestException(String.format("Resource %s doesn't exist",resource));
}
