{
  TypeSizes sizes=TypeSizes.NATIVE;
  int size=0;
  if (version < MessagingService.VERSION_20)   size+=sizes.sizeof(mutation.getKeyspaceName());
  int keySize=mutation.key().remaining();
  size+=sizes.sizeof((short)keySize) + keySize;
  size+=sizes.sizeof(mutation.modifications.size());
  for (  Map.Entry<UUID,ColumnFamily> entry : mutation.modifications.entrySet())   size+=ColumnFamily.serializer.serializedSize(entry.getValue(),TypeSizes.NATIVE,version);
  return size;
}
