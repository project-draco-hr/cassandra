{
  String line="";
  String currentStatement="";
  while ((line=reader.readLine()) != null) {
    line=line.trim();
    if (line.isEmpty() || line.startsWith("--"))     continue;
    currentStatement+=line;
    if (line.endsWith(";")) {
      processStatement(currentStatement);
      currentStatement="";
    }
 else {
      currentStatement+=" ";
    }
  }
}
