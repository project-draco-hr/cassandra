{
  logger.info(String.format("[streaming task #%s] Performing streaming repair of %d ranges with %s",id,ranges.size(),dst));
  StreamResultFuture op=new StreamPlan("Repair").flushBeforeTransfer(true).requestRanges(dst,tableName,ranges,cfName).transferRanges(dst,tableName,ranges,cfName).execute();
  op.addEventListener(callback);
}
