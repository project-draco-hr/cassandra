{
  int version=MessagingService.VERSION_30;
  ByteBuffer writtenAt=LongType.instance.decompose(UUIDGen.unixTimestamp(uuid));
  return new RowUpdateBuilder(SystemKeyspace.LegacyBatchlog,FBUtilities.timestampMicros(),uuid).clustering().add("data",BatchlogManager.serializeMutations(mutations,version)).add("written_at",writtenAt).add("version",version).build();
}
