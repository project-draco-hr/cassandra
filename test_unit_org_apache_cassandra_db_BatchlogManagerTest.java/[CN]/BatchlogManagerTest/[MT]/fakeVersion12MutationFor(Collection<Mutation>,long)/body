{
  UUID uuid=UUID.randomUUID();
  ByteBuffer writtenAt=LongType.instance.decompose(now);
  int version=MessagingService.VERSION_30;
  ByteBuffer data=BatchlogManager.serializeMutations(mutations,version);
  return new RowUpdateBuilder(SystemKeyspace.LegacyBatchlog,FBUtilities.timestampMicros(),uuid).clustering().add("written_at",writtenAt).add("data",data).add("version",version).build();
}
