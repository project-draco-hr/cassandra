{
  super(Descriptor.fromFilename(filename),components(metadata),metadata,partitioner);
  iwriter=new IndexWriter(keyCount);
  if (compression) {
    dbuilder=SegmentedFile.getCompressedBuilder();
    dataFile=CompressedSequentialWriter.open(getFilename(),descriptor.filenameFor(Component.COMPRESSION_INFO),!DatabaseDescriptor.populateIOCacheOnFlush(),metadata.compressionParameters(),sstableMetadataCollector);
  }
 else {
    dbuilder=SegmentedFile.getBuilder(DatabaseDescriptor.getDiskAccessMode());
    dataFile=SequentialWriter.open(new File(getFilename()),!DatabaseDescriptor.populateIOCacheOnFlush());
    dataFile.setComputeDigest();
  }
  this.sstableMetadataCollector=sstableMetadataCollector;
}
