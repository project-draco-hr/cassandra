{
  indexFile=SequentialWriter.open(new File(descriptor.filenameFor(SSTable.COMPONENT_INDEX)),!metadata.populateIoCacheOnFlush());
  builder=SegmentedFile.getBuilder(DatabaseDescriptor.getIndexAccessMode());
