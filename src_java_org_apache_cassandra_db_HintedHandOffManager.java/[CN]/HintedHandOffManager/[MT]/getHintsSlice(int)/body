{
  SliceQueryFilter predicate=new SliceQueryFilter(ColumnSlice.ALL_COLUMNS_ARRAY,false,columnCount);
  IPartitioner<?> partitioner=StorageService.getPartitioner();
  RowPosition minPos=partitioner.getMinimumToken().minKeyBound();
  Range<RowPosition> range=new Range<RowPosition>(minPos,minPos);
  try {
    RangeSliceCommand cmd=new RangeSliceCommand(Keyspace.SYSTEM_KS,SystemKeyspace.HINTS_CF,System.currentTimeMillis(),predicate,range,null,LARGE_NUMBER);
    return StorageProxy.getRangeSlice(cmd,ConsistencyLevel.ONE);
  }
 catch (  Exception e) {
    logger.info("HintsCF getEPPendingHints timed out.");
    throw new RuntimeException(e);
  }
}
