{
  final Runnable r=new WrappedRunnable(){
    public void runMayThrow() throws Exception {
      deliverAllHints(columnFamilyStore);
    }
  }
;
  TimerTask task=new TimerTask(){
    public void run(){
      executor_.execute(r);
    }
  }
;
  timer.schedule(task,INTERVAL_IN_MS,INTERVAL_IN_MS);
}
