{
  if (value.equalsIgnoreCase(ALL))   return Integer.MAX_VALUE;
  if (value.equalsIgnoreCase(NONE))   return 0;
  if (StringUtils.isNumeric(value))   return Integer.parseInt(value);
  throw new ConfigurationException(format("Invalid value '%s' for caching sub-option '%s':" + " only '%s', '%s', and integer values are allowed",value,Option.ROWS_PER_PARTITION,ALL,NONE));
}
