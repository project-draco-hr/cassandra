{
  int len=bytes.remaining() - 1;
  int i=0;
  for (; i < len; i++) {
    byte b0=bytes.array()[bytes.position() + bytes.arrayOffset() + i];
    if (b0 != 0 && b0 != -1)     break;
    byte b1=bytes.array()[bytes.position() + bytes.arrayOffset() + i+ 1];
    if (b0 == 0 && b1 != 0) {
      if (b1 > 0)       i++;
      break;
    }
    if (b0 == -1 && b1 != -1) {
      if (b1 < 0)       i++;
      break;
    }
  }
  return i;
}
