@classmethod
def from_layout(cls, layout):
    result = {}
    for row in layout:
        ksname = row.keyspace_name
        if (ksname not in result):
            result[ksname] = {}
        utname = row.type_name
        result[ksname][utname] = zip(row.column_names, row.column_types)
    return cls(meta=result)
