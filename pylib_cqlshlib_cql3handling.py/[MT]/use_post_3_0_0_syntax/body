def use_post_3_0_0_syntax():
    CqlRuleSet.append_rules('\n        <property> ::= <newPropSpec> ;\n    ')
    CqlRuleSet.columnfamily_layout_map_options = CqlRuleSet.new_columnfamily_layout_map_options
    CqlRuleSet.columnfamily_layout_options = CqlRuleSet.new_columnfamily_layout_options
    CqlRuleSet.obsolete_cf_options += CqlRuleSet.new_obsolete_cf_options
