{
  for (  SecondaryIndex index : indexFor(column.name())) {
    if (index instanceof PerColumnSecondaryIndex) {
      ((PerColumnSecondaryIndex)index).delete(key.key,oldColumn);
      if (!column.isMarkedForDelete())       ((PerColumnSecondaryIndex)index).insert(key.key,column);
    }
 else {
      if (appliedRowLevelIndexes.add(index.getClass()))       ((PerRowSecondaryIndex)index).index(key.key);
    }
  }
}
