{
  if (oldCell.equals(cell))   return;
  for (  SecondaryIndex index : indexFor(cell.name())) {
    if (index instanceof PerColumnSecondaryIndex) {
      if (!cell.isMarkedForDelete(System.currentTimeMillis()))       ((PerColumnSecondaryIndex)index).update(key.key,oldCell,cell,opGroup);
 else       ((PerColumnSecondaryIndex)index).delete(key.key,oldCell,opGroup);
    }
  }
}
