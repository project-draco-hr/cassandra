{
  if (oldColumn.equals(column))   return;
  for (  SecondaryIndex index : indexFor(column.name())) {
    if (index instanceof PerColumnSecondaryIndex) {
      if (!column.isMarkedForDelete(System.currentTimeMillis()))       ((PerColumnSecondaryIndex)index).insert(key.key,column);
      if (shouldCleanupOldValue(oldColumn,column))       ((PerColumnSecondaryIndex)index).delete(key.key,oldColumn);
    }
  }
}
