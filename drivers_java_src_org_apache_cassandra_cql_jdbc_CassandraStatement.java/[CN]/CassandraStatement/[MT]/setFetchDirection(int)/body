{
  checkNotClosed();
  if (direction == ResultSet.FETCH_FORWARD || direction == ResultSet.FETCH_REVERSE || direction == ResultSet.FETCH_UNKNOWN) {
    if ((getResultSetType() == ResultSet.TYPE_FORWARD_ONLY) && (direction != ResultSet.FETCH_FORWARD))     throw new SQLSyntaxErrorException(String.format(BAD_FETCH_DIR,direction));
    fetchDirection=direction;
  }
 else   throw new SQLSyntaxErrorException(String.format(BAD_FETCH_DIR,direction));
}
