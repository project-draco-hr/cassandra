{
  super(cfs,txn,nonExpiredSSTables,offline);
  logger.debug("Expected bloom filter size : {}",estimatedTotalKeys);
  long expectedWriteSize=cfs.getExpectedCompactedFileSize(nonExpiredSSTables,compactionType);
  File sstableDirectory=cfs.directories.getLocationForDisk(getWriteDirectory(expectedWriteSize));
  SSTableWriter writer=SSTableWriter.create(Descriptor.fromFilename(cfs.getTempSSTablePath(sstableDirectory)),estimatedTotalKeys,minRepairedAt,cfs.metadata,cfs.partitioner,new MetadataCollector(txn.originals(),cfs.metadata.comparator,0));
  sstableWriter.switchWriter(writer);
}
