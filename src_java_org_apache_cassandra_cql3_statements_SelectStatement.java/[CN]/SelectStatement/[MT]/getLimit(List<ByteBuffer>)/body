{
  int l=Integer.MAX_VALUE;
  if (limit != null) {
    ByteBuffer b=limit.bindAndGet(variables);
    if (b == null)     throw new InvalidRequestException("Invalid null value of limit");
    try {
      Int32Type.instance.validate(b);
      l=Int32Type.instance.compose(b);
    }
 catch (    MarshalException e) {
      throw new InvalidRequestException("Invalid limit value");
    }
  }
  if (l <= 0)   throw new InvalidRequestException("LIMIT must be strictly positive");
  if (sliceRestriction != null && (!sliceRestriction.isInclusive(Bound.START) || !sliceRestriction.isInclusive(Bound.END)) && l != Integer.MAX_VALUE)   l+=1;
  return l;
}
