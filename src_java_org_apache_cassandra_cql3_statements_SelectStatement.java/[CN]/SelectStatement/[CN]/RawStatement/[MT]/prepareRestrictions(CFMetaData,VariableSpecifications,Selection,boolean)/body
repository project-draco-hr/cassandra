{
  try {
    return new StatementRestrictions(StatementType.SELECT,cfm,whereClause,boundNames,selection.containsOnlyStaticColumns(),selection.containsACollection(),parameters.allowFiltering,forView);
  }
 catch (  UnrecognizedEntityException e) {
    if (containsAlias(e.entity))     throw invalidRequest("Aliases aren't allowed in the where clause ('%s')",e.relation);
    throw e;
  }
}
