{
  Iterator<ColumnDefinition> iter=Iterators.cycle(cfm.partitionKeyColumns());
  for (  Relation relation : whereClause) {
    SingleColumnRelation singleColumnRelation=(SingleColumnRelation)relation;
    if (singleColumnRelation.onToken && !cfm.getColumnDefinition(singleColumnRelation.getEntity().prepare(cfm)).equals(iter.next()))     throw new InvalidRequestException(String.format("The token function arguments must be in the partition key order: %s",Joiner.on(',').join(cfm.partitionKeyColumns())));
  }
}
