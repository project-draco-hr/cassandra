{
  Iterator<Name> iter=Iterators.cycle(cfDef.partitionKeys());
  for (  Relation relation : whereClause) {
    SingleColumnRelation singleColumnRelation=(SingleColumnRelation)relation;
    if (singleColumnRelation.onToken && !cfDef.get(singleColumnRelation.getEntity()).equals(iter.next()))     throw new InvalidRequestException(String.format("The token function arguments must be in the partition key order: %s",Joiner.on(',').join(cfDef.partitionKeys())));
  }
}
