{
  DeletionTime.serializer.serialize(info.topLevel,out);
  if (version < MessagingService.VERSION_12) {
    if (!info.ranges.isEmpty())     throw new RuntimeException("Cannot send range tombstone to pre-1.2 node. You should upgrade all node to Cassandra 1.2+ before using range tombstone.");
  }
 else {
    itSerializer.serialize(info.ranges,out,version);
  }
}
