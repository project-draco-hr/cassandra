{
  CFMetaData newCFMD;
  try {
    newCFMD=new CFMetaData(keyspace(),columnFamily(),ColumnFamilyType.Standard,comparator,null);
    newCFMD.defaultValidator(defaultValidator).columnMetadata(getColumns()).keyValidator(keyValidator).keyAlias(keyAlias).columnAliases(columnAliases).valueAlias(valueAlias);
    properties.applyToCFMetadata(newCFMD);
  }
 catch (  ConfigurationException e) {
    throw new InvalidRequestException(e.getMessage());
  }
  return newCFMD;
}
