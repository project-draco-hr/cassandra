{
  try {
    if (value.getType() != Term.Type.INTEGER)     throw new InvalidRequestException(String.format("Invalid argument %s for %s, must be an integer",value.getText(),fct));
    int idx=Integer.parseInt(value.getText());
    if (list == null || list.size() <= idx)     throw new InvalidRequestException(String.format("Invalid index %d, list has size %d",idx,list == null ? 0 : list.size()));
    return idx;
  }
 catch (  NumberFormatException e) {
    throw new RuntimeException();
  }
}
