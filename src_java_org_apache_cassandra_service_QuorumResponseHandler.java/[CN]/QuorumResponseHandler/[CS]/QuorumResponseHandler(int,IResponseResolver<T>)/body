{
  if (responseCount > DatabaseDescriptor.getReplicationFactor())   throw new InvalidRequestException("Cannot block for more than the replication factor of " + DatabaseDescriptor.getReplicationFactor());
  if (responseCount < 1)   throw new InvalidRequestException("Cannot block for less than one replica");
  condition_=lock_.newCondition();
  responseCount_=responseCount;
  responseResolver_=responseResolver;
  startTime_=System.currentTimeMillis();
}
