def create_test_keyspace(cursor):
    ksname = make_test_ks_name()
    qksname = quote_name(cursor, ksname)
    cursor.execute(("\n        CREATE KEYSPACE %s WITH strategy_class = 'SimpleStrategy'\n                           AND strategy_options:replication_factor = 1;\n    " % quote_name(cursor, ksname)))
    cursor.execute(('USE %s;' % qksname))
    TEST_KEYSPACES_CREATED.append(ksname)
    return ksname
