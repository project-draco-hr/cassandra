{
  List<T> results=new ArrayList<>();
  Throwable fail=null;
  for (  Future<? extends T> f : futures) {
    try {
      results.add(f.get());
    }
 catch (    InterruptedException|ExecutionException e) {
      fail=Throwables.merge(fail,e);
    }
  }
  Throwables.maybeFail(fail);
  return results;
}
