{
  File triggerDir;
  if (System.getProperty("cassandra.triggers_dir") != null)   triggerDir=new File(System.getProperty("cassandra.triggers_dir"));
 else   triggerDir=new File(FBUtilities.class.getClassLoader().getResource(DEFAULT_TRIGGER_DIR).getFile());
  if (!triggerDir.exists())   throw new RuntimeException("Trigger Directory doesnt exist, please create inside conf.");
  return triggerDir;
}
