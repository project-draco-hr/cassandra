{
  if (size >= 1 << 30)   return String.format("%.3f%sGiB",size / (double)(1 << 30),includeSpace ? " " : "");
  if (size >= 1 << 20)   return String.format("%.3f%sMiB",size / (double)(1 << 20),includeSpace ? " " : "");
  return String.format("%.3f%sKiB",size / (double)(1 << 10),includeSpace ? " " : "");
}
