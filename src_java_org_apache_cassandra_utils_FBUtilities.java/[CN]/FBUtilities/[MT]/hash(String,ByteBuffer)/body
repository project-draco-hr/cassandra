{
  byte[] result;
  try {
    MessageDigest messageDigest=MessageDigest.getInstance(type);
    for (    ByteBuffer block : data)     messageDigest.update(block.array(),block.position() + block.arrayOffset(),block.remaining());
    result=messageDigest.digest();
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  return result;
}
