def new_column(suffix, stamp=None, ttl=0):
    ts = ((isinstance(stamp, (long, int)) and stamp) or timestamp())
    column = dict()
    column['name'] = ('name-%s' % suffix)
    column['value'] = ('value-%s' % suffix)
    column['clock'] = {'timestamp': ts, }
    column['ttl'] = ttl
    return column
