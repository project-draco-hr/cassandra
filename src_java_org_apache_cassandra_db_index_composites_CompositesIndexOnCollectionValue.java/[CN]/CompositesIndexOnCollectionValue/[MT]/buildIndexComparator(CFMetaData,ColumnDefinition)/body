{
  int prefixSize=columnDef.position();
  List<AbstractType<?>> types=new ArrayList<AbstractType<?>>(prefixSize + 2);
  types.add(SecondaryIndex.keyComparator);
  for (int i=0; i < prefixSize; i++)   types.add(((CompositeType)baseMetadata.comparator).types.get(i));
  types.add(((CollectionType)columnDef.type).nameComparator());
  return CompositeType.getInstance(types);
}
