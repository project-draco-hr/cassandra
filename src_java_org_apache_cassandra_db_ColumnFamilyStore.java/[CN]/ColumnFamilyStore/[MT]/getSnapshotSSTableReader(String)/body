{
  Map<Descriptor,Set<Component>> snapshots=directories.sstableLister().snapshots(tag).list();
  List<SSTableReader> readers=new ArrayList<SSTableReader>(snapshots.size());
  for (  Map.Entry<Descriptor,Set<Component>> entries : snapshots.entrySet())   readers.add(SSTableReader.open(entries.getKey(),entries.getValue(),metadata,partitioner));
  return readers;
}
