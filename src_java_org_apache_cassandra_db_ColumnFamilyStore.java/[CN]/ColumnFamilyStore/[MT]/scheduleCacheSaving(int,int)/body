{
  if (saveRowCacheTask != null) {
    saveRowCacheTask.cancel(false);
    saveRowCacheTask=null;
  }
  if (rowCacheSavePeriodInSeconds > 0) {
    Runnable runnable=new WrappedRunnable(){
      public void runMayThrow(){
        submitRowCacheWrite();
      }
    }
;
    saveRowCacheTask=StorageService.tasks.scheduleWithFixedDelay(runnable,rowCacheSavePeriodInSeconds,rowCacheSavePeriodInSeconds,TimeUnit.SECONDS);
  }
  if (saveKeyCacheTask != null) {
    saveKeyCacheTask.cancel(false);
    saveKeyCacheTask=null;
  }
  if (keyCacheSavePeriodInSeconds > 0) {
    Runnable runnable=new WrappedRunnable(){
      public void runMayThrow(){
        submitKeyCacheWrite();
      }
    }
;
    saveKeyCacheTask=StorageService.tasks.scheduleWithFixedDelay(runnable,keyCacheSavePeriodInSeconds,keyCacheSavePeriodInSeconds,TimeUnit.SECONDS);
  }
}
