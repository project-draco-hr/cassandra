{
  fileIndexGenerator.set(0);
  Directories.SSTableLister lister=directories.sstableLister().onlyBackups(true);
  for (  Map.Entry<Descriptor,Set<Component>> entry : lister.list().entrySet()) {
    Descriptor desc=entry.getKey();
    for (    Component comp : entry.getValue())     FileUtils.delete(desc.filenameFor(comp));
  }
  for (  ColumnFamilyStore cfs : concatWithIndexes())   cfs.data.init();
}
