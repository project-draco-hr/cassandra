{
  IPartitioner rowPartitioner=StorageService.getPartitioner();
  AbstractType columnComparator=(rowPartitioner instanceof OrderPreservingPartitioner || rowPartitioner instanceof ByteOrderedPartitioner) ? BytesType.instance : new LocalByPartionerType(StorageService.getPartitioner());
  CFMetaData indexedCfMetadata=CFMetaData.newIndexMetadata(table,columnFamily,info,columnComparator);
  ColumnFamilyStore indexedCfs=ColumnFamilyStore.createColumnFamilyStore(table,indexedCfMetadata.cfName,new LocalPartitioner(metadata.column_metadata.get(info.name).validator),indexedCfMetadata);
  indexedColumns.put(info.name,indexedCfs);
}
