{
  if ((minCompactionThreshold > this.maxCompactionThreshold.value()) && this.maxCompactionThreshold.value() != 0)   throw new RuntimeException("The min_compaction_threshold cannot be larger than the max.");
  this.minCompactionThreshold.set(minCompactionThreshold);
  if (compactionStrategy != null)   CompactionManager.instance.submitBackground(this);
}
