{
  Tuple pair=TupleFactory.getInstance().newTuple(2);
  if (comparator instanceof AbstractCompositeType) {
    setTupleValue(pair,0,composeComposite((AbstractCompositeType)comparator,col.name()));
  }
 else {
    setTupleValue(pair,0,comparator.compose(col.name()));
  }
  List<AbstractType> marshallers=getDefaultMarshallers(cfDef);
  Map<ByteBuffer,AbstractType> validators=getValidatorMap(cfDef);
  if (validators.get(col.name()) == null)   setTupleValue(pair,1,marshallers.get(1).compose(col.value()));
 else   setTupleValue(pair,1,validators.get(col.name()).compose(col.value()));
  return pair;
}
