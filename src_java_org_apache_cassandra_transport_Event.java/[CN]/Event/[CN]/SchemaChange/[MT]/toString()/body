{
  StringBuilder sb=new StringBuilder().append(change).append(' ').append(target).append(' ').append(keyspace);
  if (name != null)   sb.append('.').append(name);
  if (argTypes != null) {
    sb.append(" (");
    for (Iterator<String> iter=argTypes.iterator(); iter.hasNext(); ) {
      sb.append(iter.next());
      if (iter.hasNext())       sb.append(',');
    }
    sb.append(')');
  }
  return sb.toString();
}
