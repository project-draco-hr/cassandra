{
  String assignments=Joiner.on(',').join(Iterables.filter(optionsToAssignments(options.getOptions()),Predicates.notNull()));
  if (!Strings.isNullOrEmpty(assignments)) {
    QueryProcessor.process(String.format("UPDATE %s.%s SET %s WHERE role = '%s'",AuthKeyspace.NAME,AuthKeyspace.ROLES,assignments,escape(role.getRoleName())),consistencyForRole(role.getRoleName()));
  }
}
