{
  if (getRoles(grantee,true).contains(role))   throw new InvalidRequestException(String.format("%s is a member of %s",grantee,role));
  if (getRoles(role,true).contains(grantee))   throw new InvalidRequestException(String.format("%s is a member of %s",role,grantee));
  modifyRoleMembership(grantee,role,"+");
  process(String.format("INSERT INTO %s.%s (role, member) values ('%s', '%s')",AuthKeyspace.NAME,AuthKeyspace.ROLE_MEMBERS,escape(role),escape(grantee)),consistencyForRole(role));
}
