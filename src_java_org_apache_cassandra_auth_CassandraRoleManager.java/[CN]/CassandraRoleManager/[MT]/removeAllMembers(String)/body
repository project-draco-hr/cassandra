{
  UntypedResultSet rows=process(String.format("SELECT member FROM %s.%s WHERE role = '%s'",AuthKeyspace.NAME,AuthKeyspace.ROLE_MEMBERS,escape(role)),consistencyForRole(role));
  if (rows.isEmpty())   return;
  for (  UntypedResultSet.Row row : rows)   modifyRoleMembership(row.getString("member"),role,"-");
  process(String.format("DELETE FROM %s.%s WHERE role = '%s'",AuthKeyspace.NAME,AuthKeyspace.ROLE_MEMBERS,escape(role)),consistencyForRole(role));
}
