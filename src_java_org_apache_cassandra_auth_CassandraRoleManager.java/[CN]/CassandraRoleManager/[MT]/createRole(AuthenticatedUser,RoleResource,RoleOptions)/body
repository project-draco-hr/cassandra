{
  String insertCql=options.getPassword().isPresent() ? String.format("INSERT INTO %s.%s (role, is_superuser, can_login, salted_hash) VALUES ('%s', %s, %s, '%s')",AuthKeyspace.NAME,AuthKeyspace.ROLES,escape(role.getRoleName()),options.getSuperuser().get(),options.getLogin().get(),escape(hashpw(options.getPassword().get()))) : String.format("INSERT INTO %s.%s (role, is_superuser, can_login) VALUES ('%s', %s, %s)",AuthKeyspace.NAME,AuthKeyspace.ROLES,escape(role.getRoleName()),options.getSuperuser().get(),options.getLogin().get());
  process(insertCql,consistencyForRole(role.getRoleName()));
}
