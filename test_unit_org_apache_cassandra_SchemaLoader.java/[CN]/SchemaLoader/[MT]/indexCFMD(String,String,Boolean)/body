{
  CFMetaData cfm=standardCFMD(ksName,cfName).keyValidator(AsciiType.instance);
  ByteBuffer cName=ByteBufferUtil.bytes("birthdate");
  IndexType keys=withIdxType ? IndexType.KEYS : null;
  return cfm.addColumnDefinition(ColumnDefinition.regularDef(cfm,cName,LongType.instance,null).setIndex(withIdxType ? ByteBufferUtil.bytesToHex(cName) : null,keys,null));
}
