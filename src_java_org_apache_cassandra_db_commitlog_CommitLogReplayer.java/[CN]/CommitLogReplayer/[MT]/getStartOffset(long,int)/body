{
  if (globalPosition.segment < segmentId) {
    if (version >= CommitLogDescriptor.VERSION_21)     return CommitLogDescriptor.HEADER_SIZE + CommitLogSegment.SYNC_MARKER_SIZE;
 else     return 0;
  }
 else   if (globalPosition.segment == segmentId)   return globalPosition.position;
 else   return -1;
}
