{
  if (writer != null) {
    writer.close();
    SSTableLoader.LoaderFuture future=loader.stream();
    while (true) {
      try {
        future.get(1000,TimeUnit.MILLISECONDS);
        break;
      }
 catch (      TimeoutException te) {
        progress.progress();
      }
catch (      InterruptedException e) {
        throw new IOException(e);
      }
    }
    if (future.hadFailures()) {
      if (future.getFailedHosts().size() > maxFailures)       throw new IOException("Too many hosts failed: " + future.getFailedHosts());
 else       logger.warn("Some hosts failed: " + future.getFailedHosts());
    }
  }
}
