{
  int marker=0, position=0;
  StringBuilder result=new StringBuilder();
  if (-1 == (marker=query.indexOf('?')) || parms.size() == 0)   return query;
  for (  String parm : parms) {
    result.append(query.substring(position,marker));
    result.append('\'').append(parm).append('\'');
    position=marker + 1;
    if (-1 == (marker=query.indexOf('?',position + 1)))     break;
  }
  if (position < query.length())   result.append(query.substring(position));
  return result.toString();
}
