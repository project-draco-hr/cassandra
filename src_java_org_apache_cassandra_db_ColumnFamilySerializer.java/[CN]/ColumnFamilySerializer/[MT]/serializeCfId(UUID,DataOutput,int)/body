{
  if (version < MessagingService.VERSION_12) {
    Integer oldId=Schema.instance.convertNewCfId(cfId);
    if (oldId == null)     throw new IOException("Can't serialize ColumnFamily ID " + cfId + " to be used by version "+ version+ ", because int <-> uuid mapping could not be established (CF was created in mixed version cluster).");
    dos.writeInt(oldId);
  }
 else   UUIDGen.serializer.serialize(cfId,dos,version);
}
