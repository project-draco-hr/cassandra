{
  if (System.getProperty("cassandra.host") == null || System.getProperty("cassandra.port") == null) {
    logger.warn("cassandra.host or cassandra.port is not defined, using default");
  }
  return createConnection(System.getProperty("cassandra.host","localhost"),Integer.valueOf(System.getProperty("cassandra.port","9160")),Boolean.valueOf(System.getProperty("cassandra.framed","false")));
}
