{
  Table table=Table.open("Keyspace1");
  for (int i=0; i < N; ++i) {
    byte[] key=Integer.toString(i).getBytes();
    RowMutation rm;
    for (int j=0; j < 8; ++j) {
      byte[] bytes=j % 2 == 0 ? "a".getBytes() : "b".getBytes();
      rm=new RowMutation("Keyspace1",key);
      rm.add(new QueryPath("Standard1",null,("Column-" + j).getBytes()),bytes,new TimestampClock(j));
      rm.apply();
    }
    for (int j=0; j < 8; ++j) {
      rm=new RowMutation("Keyspace1",key);
      for (int k=0; k < 4; ++k) {
        String value=(j + k) % 2 == 0 ? "a" : "b";
        addMutation(rm,"Super1","SuperColumn-" + j,k,value,new TimestampClock(k));
      }
      rm.apply();
    }
  }
  validateNameSort(table,N);
  table.getColumnFamilyStore("Standard1").forceBlockingFlush();
  table.getColumnFamilyStore("Super1").forceBlockingFlush();
  validateNameSort(table,N);
}
