{
  DeleteStatement stmt=new DeleteStatement(boundNames.size(),cfm,attrs);
  for (  Operation.RawDeletion deletion : deletions) {
    ColumnDefinition def=cfm.getColumnDefinition(deletion.affectedColumn());
    if (def == null)     throw new InvalidRequestException(String.format("Unknown identifier %s",deletion.affectedColumn()));
    if (def.kind != ColumnDefinition.Kind.REGULAR && def.kind != ColumnDefinition.Kind.COMPACT_VALUE)     throw new InvalidRequestException(String.format("Invalid identifier %s for deletion (should not be a PRIMARY KEY part)",def.name));
    Operation op=deletion.prepare(cfm.ksName,def);
    op.collectMarkerSpecification(boundNames);
    stmt.addOperation(op);
  }
  stmt.processWhereClause(whereClause,boundNames);
  return stmt;
}
