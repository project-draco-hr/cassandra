{
  ColumnIdentifier identifier=raw.prepare(cfm);
  ColumnDefinition def=cfm.getColumnDefinition(identifier);
  boolean isPk=basePK.contains(identifier);
  if (!isPk && hasNonPKColumn)   throw new InvalidRequestException(String.format("Cannot include more than one non-primary key column '%s' in materialized view partition key",identifier));
  boolean isSinglePartitionKey=cfm.getColumnDefinition(identifier).isPartitionKey() && cfm.partitionKeyColumns().size() == 1;
  if (!isSinglePartitionKey && !restrictions.isRestricted(def))   throw new InvalidRequestException(String.format("Primary key column '%s' is required to be filtered by 'IS NOT NULL'",identifier));
  columns.add(identifier);
  return !isPk;
}
