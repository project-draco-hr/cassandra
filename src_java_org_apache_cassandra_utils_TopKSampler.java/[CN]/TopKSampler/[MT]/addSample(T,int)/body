{
  if (enabled) {
    final Object lock=this;
    samplerExecutor.execute(new Runnable(){
      public void run(){
synchronized (lock) {
          if (enabled) {
            try {
              summary.offer(item,value);
              hll.offer(item);
            }
 catch (            Exception e) {
              logger.debug("Failure to offer sample",e);
            }
          }
        }
      }
    }
);
  }
}
