{
  if (!oldColumn.name().equals(newColumn.name()))   throw new IllegalArgumentException();
  while (true) {
    Holder current=ref;
    Holder modified=current.update(this,current.deletionInfo,metadata.comparator.columnComparator(),Arrays.asList(newColumn),null);
    if (modified == current)     return false;
    if (refUpdater.compareAndSet(this,current,modified))     return true;
  }
}
