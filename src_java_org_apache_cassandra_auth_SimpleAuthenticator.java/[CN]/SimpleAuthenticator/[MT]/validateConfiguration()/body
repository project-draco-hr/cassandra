{
  String aFileName=System.getProperty(SimpleAuthenticator.ACCESS_FILENAME_PROPERTY);
  String pfilename=System.getProperty(SimpleAuthenticator.PASSWD_FILENAME_PROPERTY);
  if (aFileName == null || pfilename == null) {
    throw new ConfigurationException("When using " + this.getClass().getCanonicalName() + " "+ SimpleAuthenticator.ACCESS_FILENAME_PROPERTY+ " and "+ SimpleAuthenticator.PASSWD_FILENAME_PROPERTY+ " properties must be defined.");
  }
}
