{
  for (  ColumnFamily columnFamily : mutation.getColumnFamilies()) {
    CFMetaData cfm=columnFamily.metadata();
    if (cfm.isPurged())     logger.error("Attempted to write commit log entry for unrecognized column family: {}",columnFamily.id());
 else     ensureAtleast(cfDirty,cfm.cfId,allocatedPosition);
  }
}
