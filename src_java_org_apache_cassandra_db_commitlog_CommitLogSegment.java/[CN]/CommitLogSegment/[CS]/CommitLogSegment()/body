{
  id=System.currentTimeMillis();
  String logFile=DatabaseDescriptor.getCommitLogLocation() + File.separator + "CommitLog-"+ id+ ".log";
  logger.info("Creating new commitlog segment " + logFile);
  try {
    logWriter=createWriter(logFile);
  }
 catch (  IOException e) {
    throw new IOError(e);
  }
}
