{
  return new SecondaryIndexSearcher(baseCfs.indexManager,columns){
    @Override public List<Row> search(    ExtendedFilter filter){
      return Arrays.asList(new Row(LAST_INDEXED_KEY,LAST_INDEXED_ROW));
    }
    @Override public void validate(    IndexExpression indexExpression) throws InvalidRequestException {
      if (indexExpression.value.equals(ByteBufferUtil.bytes("invalid")))       throw new InvalidRequestException("Invalid search!");
    }
  }
;
}
