{
  allMetrics.add(name);
  return Metrics.newGauge(factory.createMetricName(name),new Gauge<Long>(){
    public Long value(){
      long sum=0;
      for (      ColumnFamilyStore cf : keyspace.getColumnFamilyStores()) {
        sum+=extractor.getValue(cf.metric);
      }
      return sum;
    }
  }
);
}
