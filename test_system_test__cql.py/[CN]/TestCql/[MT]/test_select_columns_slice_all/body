def test_select_columns_slice_all(self):
    'slice all columns in a row'
    cursor = init()
    cursor.execute("SELECT * FROM StandardString1 WHERE KEY = 'ka';")
    r = cursor.fetchone()
    assert (len(r) == 3)
    cursor.execute("SELECT ''..'' FROM StandardString1 WHERE KEY = 'ka';")
    r = cursor.fetchone()
    assert (len(r) == 3)
