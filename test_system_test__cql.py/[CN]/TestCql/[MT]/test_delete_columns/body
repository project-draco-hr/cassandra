def test_delete_columns(self):
    'delete columns from a row'
    cursor = init()
    cursor.execute("\n            SELECT 'cd1', 'col' FROM StandardString1 WHERE KEY = 'kd'\n        ")
    assert (['Row Key', 'cd1', 'col'] == [col_d[0] for col_d in cursor.description])
    cursor.execute("\n            DELETE 'cd1', 'col' FROM StandardString1 WHERE KEY = 'kd'\n        ")
    cursor.execute("\n            SELECT 'cd1', 'col' FROM StandardString1 WHERE KEY = 'kd'\n        ")
    r = cursor.fetchone()
    assert (['kd', None, None] == r), r
