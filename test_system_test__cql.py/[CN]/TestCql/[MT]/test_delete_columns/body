def test_delete_columns(self):
    'delete columns from a row'
    conn = init()
    r = conn.execute("\n            SELECT 'cd1', 'col' FROM StandardString1 WHERE KEY = 'kd'\n        ")
    assert ('cd1' in [i.name for i in r[0].columns])
    assert ('col' in [i.name for i in r[0].columns])
    conn.execute("\n            DELETE 'cd1', 'col' FROM StandardString1 WHERE KEY = 'kd'\n        ")
    r = conn.execute("\n            SELECT 'cd1', 'col' FROM StandardString1 WHERE KEY = 'kd'\n        ")
    assert (len(r[0].columns) == 0)
