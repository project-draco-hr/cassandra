def test_compression_disabled(self):
    'reading and writing w/ compression disabled'
    cursor = init()
    cursor.compression = 'NONE'
    cursor.execute('UPDATE StandardString1 SET :name = :val WHERE KEY = :key', dict(name='some_name', val='some_value', key='compression_test'))
    cursor.execute('SELECT :name FROM StandardString1 WHERE KEY = :key', dict(name='some_name', key='compression_test'))
    assert (cursor.rowcount == 1), ('expected 1 result, got %d' % cursor.rowcount)
    colnames = [col_d[0] for col_d in cursor.description]
    assert (colnames[1] == 'some_name'), ("unrecognized name '%s'" % colnames[1])
    r = cursor.fetchone()
    assert (r[1] == 'some_value'), ("unrecognized value '%s'" % r[1])
