def test_read_write_negative_numerics(self):
    'reading and writing negative numeric values'
    cursor = init()
    for cf in ('StandardIntegerA', 'StandardLongA'):
        for i in range(10):
            cursor.execute('UPDATE :cf SET :name = :val WHERE KEY = negatives;', dict(cf=cf, name=(- (i + 1)), val=i))
        cursor.execute('SELECT :start..:finish FROM :cf WHERE KEY = negatives;', dict(start=(-10), finish=(-1), cf=cf))
        r = cursor.fetchone()
        assert (len(r) == 10), ('returned %d columns, expected %d' % ((len(r) - 1), 10))
        d = cursor.description
        assert (d[0][0] == (-10))
        assert (d[9][0] == (-1))
