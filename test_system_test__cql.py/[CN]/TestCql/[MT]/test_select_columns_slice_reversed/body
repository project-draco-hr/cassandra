def test_select_columns_slice_reversed(self):
    'range of columns (slice) by row reversed'
    cursor = init()
    cursor.execute("\n            SELECT FIRST 2 REVERSED 3..1 FROM StandardLongA WHERE KEY = 'aa';\n        ")
    assert (cursor.rowcount == 1), ('%d != 1' % cursor.rowcount)
    r = cursor.fetchone()
    assert (len(r) == 3)
    assert (r[0] == 'aa')
    assert (r[1] == '3')
    assert (r[2] == '2')
