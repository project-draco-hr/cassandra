def test_escaped_quotes(self):
    'reading and writing strings w/ escaped quotes'
    conn = init()
    conn.execute("\n            UPDATE StandardString1 SET 'x''and''y' = z WHERE KEY = ?\n        ", 'test_escaped_quotes')
    r = conn.execute("\n            SELECT 'x''and''y' FROM StandardString1 WHERE KEY = ?\n        ", 'test_escaped_quotes')
    assert ((len(r) == 1) and (len(r[0]) == 1)), 'wrong number of results'
    assert (r[0][0].name == "x'and'y")
