def test_escaped_quotes(self):
    'reading and writing strings w/ escaped quotes'
    cursor = init()
    cursor.execute("\n                       UPDATE StandardString1 SET 'x''and''y' = z WHERE KEY = :key\n                       ", dict(key='test_escaped_quotes'))
    cursor.execute("\n                       SELECT 'x''and''y' FROM StandardString1 WHERE KEY = :key\n                       ", dict(key='test_escaped_quotes'))
    assert (cursor.rowcount == 1)
    r = cursor.fetchone()
    assert (len(r) == 1), 'wrong number of results'
    d = cursor.description
    assert (d[0][0] == "x'and'y")
