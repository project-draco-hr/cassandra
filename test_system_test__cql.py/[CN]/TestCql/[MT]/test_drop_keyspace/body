def test_drop_keyspace(self):
    'removing a keyspace'
    conn = init()
    conn.execute('\n        CREATE KEYSPACE Keyspace4Drop\n            WITH strategy_class = "SimpleStrategy" AND replication_factor = 1\n        ')
    thrift_client.describe_keyspace('Keyspace4Drop')
    conn.execute('DROP KEYSPACE Keyspace4Drop;')
    assert_raises(Exception, thrift_client.describe_keyspace, 'Keyspace4Drop')
