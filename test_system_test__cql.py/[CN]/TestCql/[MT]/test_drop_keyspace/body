def test_drop_keyspace(self):
    'removing a keyspace'
    cursor = init()
    cursor.execute("\n               CREATE KEYSPACE Keyspace4Drop WITH strategy_options:replication_factor = '1'\n                   AND strategy_class = 'SimpleStrategy'\n        ")
    thrift_client.describe_keyspace('Keyspace4Drop')
    cursor.execute('DROP SCHEMA Keyspace4Drop;')
    assert_raises(Exception, thrift_client.describe_keyspace, 'Keyspace4Drop')
