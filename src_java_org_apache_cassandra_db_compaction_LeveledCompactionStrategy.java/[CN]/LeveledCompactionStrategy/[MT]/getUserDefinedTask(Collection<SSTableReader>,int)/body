{
  if (sstables.size() != 1)   throw new UnsupportedOperationException("LevelDB compaction strategy does not allow user-specified compactions");
  LifecycleTransaction transaction=cfs.getTracker().tryModify(sstables,OperationType.COMPACTION);
  if (transaction == null) {
    logger.trace("Unable to mark {} for compaction; probably a background compaction got to it first.  You can disable background compactions temporarily if this is a problem",sstables);
    return null;
  }
  int level=sstables.iterator().next().getSSTableLevel();
  return getCompactionTask(transaction,gcBefore,level == 0 ? Integer.MAX_VALUE : getMaxSSTableBytes());
}
