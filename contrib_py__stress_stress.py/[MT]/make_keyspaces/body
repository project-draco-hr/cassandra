def make_keyspaces():
    cfams = [CfDef(keyspace='Keyspace1', name='Standard1'), CfDef(keyspace='Keyspace1', name='Super1', column_type='Super')]
    keyspace = KsDef(name='Keyspace1', strategy_class='org.apache.cassandra.locator.RackUnawareStrategy', replication_factor=options.replication, cf_defs=cfams)
    client = get_client(nodes[0], options.port)
    client.transport.open()
    try:
        client.system_add_keyspace(keyspace)
        print ('Created keyspaces.  Sleeping %ss for propagation.' % len(nodes))
        time.sleep(len(nodes))
    except InvalidRequestException as e:
        print e.why
    client.transport.close()
