{
  createTable("CREATE TABLE %s (id int PRIMARY KEY, id2 text)");
  execute("delete from %s where id = 22");
  getCurrentColumnFamilyStore().forceBlockingFlush();
  for (  SSTableReader sstable : getCurrentColumnFamilyStore().getSSTables())   assertFalse(sstable.getSSTableMetadata().estimatedTombstoneDropTime.getAsMap().isEmpty());
  getCurrentColumnFamilyStore().forceMajorCompaction();
  for (  SSTableReader sstable : getCurrentColumnFamilyStore().getSSTables())   assertFalse(sstable.getSSTableMetadata().estimatedTombstoneDropTime.getAsMap().isEmpty());
}
