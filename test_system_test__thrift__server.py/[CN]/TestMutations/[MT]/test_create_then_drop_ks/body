def test_create_then_drop_ks(self):
    keyspace = KsDef('AddThenDrop', strategy_class='org.apache.cassandra.locator.SimpleStrategy', strategy_options={'replication_factor': '1', }, cf_defs=[])

    def test_existence():
        client.describe_keyspace(keyspace.name)
    _expect_exception(test_existence, NotFoundException)
    client.set_keyspace('system')
    client.system_add_keyspace(keyspace)
    test_existence()
    client.system_drop_keyspace(keyspace.name)
