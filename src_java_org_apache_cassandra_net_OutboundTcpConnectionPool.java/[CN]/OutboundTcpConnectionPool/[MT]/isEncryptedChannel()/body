{
switch (DatabaseDescriptor.getEncryptionOptions().internode_encryption) {
case none:
    return false;
case all:
  break;
case dc:
if (snitch.getDatacenter(id).equals(snitch.getDatacenter(FBUtilities.getBroadcastAddress()))) return false;
break;
case rack:
if (snitch.getRack(id).equals(snitch.getRack(FBUtilities.getBroadcastAddress())) && snitch.getDatacenter(id).equals(snitch.getDatacenter(FBUtilities.getBroadcastAddress()))) return false;
break;
}
return true;
}
