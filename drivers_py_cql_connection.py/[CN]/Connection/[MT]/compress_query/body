@classmethod
def compress_query(cls, query, compression):
    '\n        Returns a query string compressed with the specified compression type.\n        \n        Params:\n        * query .........: The query string to compress.\n        * compression ...: Type of compression to use.\n        '
    if (not (compression in COMPRESSION_SCHEMES)):
        raise InvalidCompressionScheme(compression)
    if (compression == 'GZIP'):
        return zlib.compress(query)
