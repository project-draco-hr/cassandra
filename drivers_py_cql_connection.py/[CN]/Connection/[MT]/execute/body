def execute(self, query, compression=None):
    '\n        Execute a CQL query on a remote node.\n        \n        Params:\n        * query .........: CQL query string.\n        * compression ...: Query compression type (optional).\n        '
    compress = (((compression is None) and DEFAULT_COMPRESSION) or compression.upper())
    compressed_query = Connection.compress_query(query, compress)
    request_compression = getattr(Compression, compress)
    try:
        response = self.client.execute_cql_query(compressed_query, request_compression)
    except InvalidRequestException as ire:
        raise CQLException(('Bad Request: %s' % ire.why))
    except TApplicationException as tapp:
        raise CQLException('Internal application error')
    except Exception as exc:
        raise CQLException(exc)
    if (response.type == CqlResultType.ROWS):
        return response.rows
    if (response.type == CqlResultType.INT):
        return response.num
    return None
