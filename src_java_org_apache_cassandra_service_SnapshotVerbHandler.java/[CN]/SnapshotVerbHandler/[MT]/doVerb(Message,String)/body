{
  try {
    SnapshotCommand command=SnapshotCommand.read(message);
    if (command.clear_snapshot)     Table.open(command.keyspace).clearSnapshot(command.snapshot_name);
 else     Table.open(command.keyspace).getColumnFamilyStore(command.column_family).snapshot(command.snapshot_name);
    Message response=message.getReply(FBUtilities.getBroadcastAddress(),new byte[0],MessagingService.current_version);
    if (logger.isDebugEnabled())     logger.debug("Sending response to snapshot request {} to {} ",command.snapshot_name,message.getFrom());
    MessagingService.instance().sendReply(response,id,message.getFrom());
  }
 catch (  Exception ex) {
    throw new RuntimeException(ex);
  }
}
