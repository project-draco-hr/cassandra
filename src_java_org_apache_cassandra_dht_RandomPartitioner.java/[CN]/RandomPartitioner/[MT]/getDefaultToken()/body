{
  String initialToken=DatabaseDescriptor.getInitialToken();
  if (initialToken != null)   return new BigIntegerToken(new BigInteger(initialToken));
  String guid=GuidGenerator.guid();
  BigInteger token=FBUtilities.hash(guid);
  if (token.signum() == -1)   token=token.multiply(BigInteger.valueOf(-1L));
  return new BigIntegerToken(token);
}
