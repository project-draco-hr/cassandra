{
  TokenTreeBuilder keys=term.keys;
  if (mode == Mode.SPARSE) {
    if (keys.getTokenCount() > MAX_KEYS_SPARSE)     throw new IOException(String.format("Term - '%s' belongs to more than %d keys in %s mode, which is not allowed.",comparator.getString(term.term),MAX_KEYS_SPARSE,mode.name()));
    writeTerm(term,keys);
  }
 else {
    writeTerm(term,offset);
    offset+=keys.serializedSize();
    containers.add(keys);
  }
  if (mode == Mode.SPARSE)   combinedIndex.add(keys);
}
