{
  logger.debug("get_slice_super");
  String[] values=columnFamily.split(":",-1);
  if (values.length != 2 || !DatabaseDescriptor.getColumnFamilyType(tablename,values[0]).equals("Super"))   throw new InvalidRequestException("get_slice_super requires a super CF name and a starting column name");
  if (count <= 0)   throw new InvalidRequestException("get_slice_super requires positive count");
  ColumnFamily cfamily=readColumnFamily(new SliceFromReadCommand(tablename,key,columnFamily,isAscending,count));
  if (cfamily == null) {
    return EMPTY_SUPERCOLUMNS;
  }
  Collection<IColumn> columns=cfamily.getAllColumns();
  return thriftifySuperColumns(columns);
}
