{
  if (!marker.isBoundary())   return marker;
  RangeTombstoneBoundaryMarker boundary=(RangeTombstoneBoundaryMarker)marker;
  if (!(includeDelTime(boundary.closeDeletionTime(reversed))))   return boundary.createCorrespondingCloseBound(reversed);
 else   if (!(includeDelTime(boundary.openDeletionTime(reversed))))   return boundary.createCorrespondingOpenBound(reversed);
  return boundary;
}
