{
  SerializationHeader header=new SerializationHeader(true,cfs.metadata,columns,EncodingStats.NO_STATS);
  if (makeRangeAware)   return SSTableTxnWriter.createRangeAware(cfs,0,ActiveRepairService.UNREPAIRED_SSTABLE,formatType,0,header);
  return SSTableTxnWriter.create(cfs,createDescriptor(cfs.getDirectories().getDirectoryForNewSSTables(),cfs.metadata.ksName,cfs.metadata.cfName,formatType),0,ActiveRepairService.UNREPAIRED_SSTABLE,0,header);
}
