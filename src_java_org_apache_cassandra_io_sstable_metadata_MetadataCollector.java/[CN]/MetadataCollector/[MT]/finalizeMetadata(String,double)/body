{
  Map<MetadataType,MetadataComponent> components=Maps.newHashMap();
  components.put(MetadataType.VALIDATION,new ValidationMetadata(partitioner,bloomFilterFPChance));
  components.put(MetadataType.STATS,new StatsMetadata(estimatedRowSize,estimatedColumnCount,replayPosition,minTimestamp,maxTimestamp,maxLocalDeletionTime,compressionRatio,estimatedTombstoneDropTime,sstableLevel,minColumnNames,maxColumnNames));
  components.put(MetadataType.COMPACTION,new CompactionMetadata(ancestors));
  return components;
}
