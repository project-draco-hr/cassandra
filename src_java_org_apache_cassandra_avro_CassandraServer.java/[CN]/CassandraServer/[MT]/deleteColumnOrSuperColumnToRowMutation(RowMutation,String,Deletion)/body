{
  if (del.predicate != null && del.predicate.column_names != null) {
    for (    ByteBuffer col : del.predicate.column_names) {
      if (del.super_column == null && DatabaseDescriptor.getColumnFamilyType(rm.getTable(),cfName) == ColumnFamilyType.Super)       rm.delete(new QueryPath(cfName,col),del.timestamp);
 else       rm.delete(new QueryPath(cfName,del.super_column,col),del.timestamp);
    }
  }
 else {
    rm.delete(new QueryPath(cfName,del.super_column),del.timestamp);
  }
}
