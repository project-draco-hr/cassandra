{
  if (del.predicate != null && del.predicate.column_names != null) {
    for (    ByteBuffer col : del.predicate.column_names) {
      if (del.super_column == null && DatabaseDescriptor.getColumnFamilyType(rm.getTable(),cfName).equals("Super"))       rm.delete(new QueryPath(cfName,col.array()),del.timestamp);
 else       rm.delete(new QueryPath(cfName,del.super_column.array(),col.array()),del.timestamp);
    }
  }
 else {
    rm.delete(new QueryPath(cfName,del.super_column.array()),del.timestamp);
  }
}
