{
  int tombstones=0;
  ISSTableScanner partitions=reader.getScanner();
  while (partitions.hasNext()) {
    OnDiskAtomIterator iter=partitions.next();
    while (iter.hasNext()) {
      OnDiskAtom atom=iter.next();
      if (atom instanceof RangeTombstone)       ++tombstones;
    }
  }
  return tombstones;
}
