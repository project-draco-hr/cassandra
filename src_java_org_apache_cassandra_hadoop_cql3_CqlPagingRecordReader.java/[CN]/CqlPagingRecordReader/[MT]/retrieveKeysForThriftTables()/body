{
  KsDef ksDef=client.describe_keyspace(keyspace);
  for (  CfDef cfDef : ksDef.cf_defs) {
    if (cfDef.name.equalsIgnoreCase(cfName)) {
      CFMetaData cfMeta=CFMetaData.fromThrift(cfDef);
      CFDefinition cfDefinition=new CFDefinition(cfMeta);
      for (      ColumnIdentifier key : cfDefinition.keys.keySet())       partitionBoundColumns.add(new BoundColumn(key.toString()));
      for (      ColumnIdentifier column : cfDefinition.columns.keySet())       clusterColumns.add(new BoundColumn(column.toString()));
      parseKeyValidators(cfDef.key_validation_class);
      return;
    }
  }
}
