{
  int errno=Integer.MIN_VALUE;
  try {
    int result=CLibrary.link(sourceFile.getAbsolutePath(),destinationFile.getAbsolutePath());
    if (result != 0)     errno=Native.getLastError();
  }
 catch (  UnsatisfiedLinkError e) {
    createHardLinkWithExec(sourceFile,destinationFile);
    return;
  }
  if (errno != Integer.MIN_VALUE) {
    throw new IOException(String.format("Unable to create hard link from %s to %s (errno %d)",sourceFile,destinationFile,errno));
  }
}
