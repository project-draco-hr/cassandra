{
  RandomAccessFile file;
  try {
    file=new RandomAccessFile(path,"rw");
  }
 catch (  FileNotFoundException e) {
    throw new RuntimeException(e);
  }
  try {
    file.getChannel().truncate(size);
  }
 catch (  IOException e) {
    throw new FSWriteError(e,path);
  }
 finally {
    closeQuietly(file);
  }
}
