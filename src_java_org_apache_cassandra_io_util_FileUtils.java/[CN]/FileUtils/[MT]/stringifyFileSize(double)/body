{
  double d;
  if (value >= TB) {
    d=value / TB;
    String val=df.format(d);
    return val + " TB";
  }
 else   if (value >= GB) {
    d=value / GB;
    String val=df.format(d);
    return val + " GB";
  }
 else   if (value >= MB) {
    d=value / MB;
    String val=df.format(d);
    return val + " MB";
  }
 else   if (value >= KB) {
    d=value / KB;
    String val=df.format(d);
    return val + " KB";
  }
 else {
    String val=df.format(value);
    return val + " bytes";
  }
}
