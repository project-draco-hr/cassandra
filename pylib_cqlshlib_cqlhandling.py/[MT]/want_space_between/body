def want_space_between(tok, following):
    if ((tok[0] == 'op') and (tok[1] in (',', ')', '='))):
        return True
    if ((tok[0] == 'stringLiteral') and (following[0] != ';')):
        return True
    if ((tok[0] == 'star') and (following[0] != ')')):
        return True
    if (tok[0] == 'endtoken'):
        return True
    if (tok[1][(-1)].isalnum() and (following[0] != ',')):
        return True
    return False
