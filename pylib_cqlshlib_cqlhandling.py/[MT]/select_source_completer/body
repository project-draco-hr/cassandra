@completer_for('selectStatement', 'selectsource')
def select_source_completer(ctxt, cass):
    ks = ctxt.get_binding('selectks', None)
    if (ks is not None):
        ks = cql_dequote(ks)
    try:
        cfnames = cass.get_columnfamily_names(ks)
    except Exception:
        if (ks is None):
            return ()
        raise
    return map(maybe_cql_escape, cfnames)
