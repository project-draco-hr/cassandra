{
  if (description.equals("") && defaultValue == null && (valueAdapter instanceof ValueMatcher && ((ValueMatcher)valueAdapter).pattern.pattern().equals("")))   return null;
  StringBuilder sb=new StringBuilder();
  sb.append(displayPrefix);
  if (displayPrefix.endsWith("="))   sb.append("?");
  if (displayPrefix.endsWith("<"))   sb.append("?");
  if (displayPrefix.endsWith(">"))   sb.append("?");
  if (defaultValue != null) {
    sb.append(" (default=");
    sb.append(defaultValue);
    sb.append(")");
  }
  return GroupedOptions.formatLong(sb.toString(),description);
}
