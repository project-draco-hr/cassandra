{
  if (matchPrefix.matcher(param).lookingAt()) {
    if (value != null)     throw new IllegalArgumentException("Suboption " + displayPrefix + " has been specified more than once");
    String v=param.substring(displayPrefix.length());
    if (!pattern.matcher(v).matches())     throw new IllegalArgumentException("Invalid option " + param + "; must match pattern "+ pattern);
    value=v;
    return true;
  }
  return false;
}
