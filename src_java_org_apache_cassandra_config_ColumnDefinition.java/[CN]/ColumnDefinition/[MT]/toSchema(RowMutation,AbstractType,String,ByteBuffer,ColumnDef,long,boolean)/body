{
  for (  ColumnDef._Fields field : ColumnDef._Fields.values()) {
    QueryPath path=new QueryPath(SystemTable.SCHEMA_COLUMNS_CF,null,compositeNameFor(cfName,readableColumnName(columnName,comparator),field.getFieldName()));
    if (delete)     mutation.delete(path,timestamp);
 else     mutation.add(path,valueAsBytes(columnDef.getFieldValue(field)),timestamp);
  }
}
