{
  ColumnDefinition cd=new ColumnDefinition();
  DataInputStream in=new DataInputStream(new ByteArrayInputStream(bytes));
  int nameSize=in.readInt();
  cd.name=new byte[nameSize];
  if (in.read(cd.name,0,nameSize) != nameSize)   throw new IOException("short read of ColumnDefinition name");
  if (in.readBoolean())   cd.validation_class=in.readUTF();
  if (in.readBoolean())   cd.index_type=in.readUTF();
  if (in.readBoolean())   cd.index_name=in.readUTF();
  return cd;
}
