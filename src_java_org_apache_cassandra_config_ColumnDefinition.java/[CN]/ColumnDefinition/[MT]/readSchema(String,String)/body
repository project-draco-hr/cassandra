{
  DecoratedKey key=StorageService.getPartitioner().decorateKey(SystemTable.getSchemaKSKey(ksName));
  ColumnFamilyStore columnsStore=SystemTable.schemaCFS(SystemTable.SCHEMA_COLUMNS_CF);
  ColumnFamily cf=columnsStore.getColumnFamily(key,new QueryPath(SystemTable.SCHEMA_COLUMNS_CF),DefsTable.searchComposite(cfName,true),DefsTable.searchComposite(cfName,false),false,Integer.MAX_VALUE);
  return new Row(key,cf);
}
