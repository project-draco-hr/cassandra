{
  DecoratedKey key=StorageService.getPartitioner().decorateKey(SystemTable.getSchemaKSKey(ksName));
  ColumnFamilyStore columnsStore=SystemTable.schemaCFS(SystemTable.SCHEMA_COLUMNS_CF);
  return columnsStore.getColumnFamily(key,new QueryPath(SystemTable.SCHEMA_COLUMNS_CF),MigrationHelper.searchComposite(cfName,true),MigrationHelper.searchComposite(cfName,false),false,Integer.MAX_VALUE);
}
