{
  validateIndexType(avroColumnDef);
  AbstractType validatorType=DatabaseDescriptor.getComparator(avroColumnDef.validation_class);
  return new ColumnDefinition(avroColumnDef.name,validatorType,IndexType.valueOf(avroColumnDef.index_type == null ? D_COLDEF_INDEXTYPE : avroColumnDef.index_type.name()),avroColumnDef.index_name == null ? D_COLDEF_INDEXNAME : avroColumnDef.index_name.toString());
}
