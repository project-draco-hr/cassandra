{
  if (b == null)   throw new NullPointerException();
  if (off < 0 || off > b.length || len < 0 || len > b.length - off)   throw new IndexOutOfBoundsException();
  if (len == 0)   return 0;
  int copied=0;
  while (copied < len) {
    if (buf.hasRemaining()) {
      int toCopy=Math.min(len - copied,buf.remaining());
      buf.get(b,off + copied,toCopy);
      copied+=toCopy;
    }
 else {
      int read=readNext();
      if (read < 0 && copied == 0)       return -1;
      if (read <= 0)       return copied;
    }
  }
  return copied;
}
