{
  validateKeyspace(keyspace);
  String column_family=cp.column_family.toString();
  ColumnFamilyType cfType=validateColumnFamily(keyspace,column_family);
  if (cfType == ColumnFamilyType.Standard) {
    if (cp.super_column != null)     throw newInvalidRequestException("supercolumn parameter is invalid for standard CF " + column_family);
    if (cp.column == null)     throw newInvalidRequestException("column parameter is not optional for standard CF " + column_family);
  }
 else {
    if (cp.super_column == null)     throw newInvalidRequestException("supercolumn parameter is not optional for super CF " + column_family);
  }
  if (cp.column != null)   validateColumns(keyspace,column_family,cp.super_column,Arrays.asList(cp.column));
  if (cp.super_column != null)   validateColumns(keyspace,column_family,null,Arrays.asList(cp.super_column));
}
