{
  if (index_clause.expressions.isEmpty())   throw newInvalidRequestException("index clause list may not be empty");
  Set<ByteBuffer> indexedColumns=Table.open(keyspace).getColumnFamilyStore(columnFamily).getIndexedColumns();
  for (  IndexExpression expression : index_clause.expressions) {
    if (expression.op.equals(IndexOperator.EQ) && indexedColumns.contains(expression.column_name.array()))     return;
  }
  throw newInvalidRequestException("No indexed columns present in index clause with operator EQ");
}
