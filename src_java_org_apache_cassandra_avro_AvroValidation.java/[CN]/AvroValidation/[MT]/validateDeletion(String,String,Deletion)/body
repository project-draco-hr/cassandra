{
  validateColumnFamily(keyspace,cfName);
  if (del.super_column == null && del.predicate == null)   throw newInvalidRequestException("A Deletion must have a SuperColumn, a SlicePredicate, or both.");
  if (del.predicate != null) {
    byte[] superName=del.super_column == null ? null : del.super_column.array();
    validateSlicePredicate(keyspace,cfName,superName,del.predicate);
    if (del.predicate.slice_range != null)     throw newInvalidRequestException("Deletion does not yet support SliceRange predicates.");
  }
}
