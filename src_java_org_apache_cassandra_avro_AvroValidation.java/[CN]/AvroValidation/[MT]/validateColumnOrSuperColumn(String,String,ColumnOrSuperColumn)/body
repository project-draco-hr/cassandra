{
  if (cosc.column != null)   AvroValidation.validateColumnPath(keyspace,newColumnPath(cfName,cosc.super_column.name,cosc.column.name));
  if (cosc.super_column != null)   for (  Column c : cosc.super_column.columns)   AvroValidation.validateColumnPath(keyspace,newColumnPath(cfName,cosc.super_column.name,c.name));
  if ((cosc.column == null) && (cosc.super_column == null))   throw newInvalidRequestException("ColumnOrSuperColumn must have one or both of Column or SuperColumn");
}
