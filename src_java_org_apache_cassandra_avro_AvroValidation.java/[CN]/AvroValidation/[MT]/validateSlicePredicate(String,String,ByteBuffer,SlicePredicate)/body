{
  if (predicate.column_names == null && predicate.slice_range == null)   throw newInvalidRequestException("A SlicePredicate must be given a list of Columns, a SliceRange, or both");
  if (predicate.slice_range != null)   validateRange(keyspace,cfName,superName,predicate.slice_range);
  if (predicate.column_names != null)   validateColumns(keyspace,cfName,superName,predicate.column_names);
}
