{
  if (Schema.isSystemKeyspace(keyspaceName))   throw new RuntimeException("Cleanup of the system keyspace is neither necessary nor wise");
  CompactionManager.AllSSTableOpStatus status=CompactionManager.AllSSTableOpStatus.SUCCESSFUL;
  for (  ColumnFamilyStore cfStore : getValidColumnFamilies(false,false,keyspaceName,columnFamilies)) {
    CompactionManager.AllSSTableOpStatus oneStatus=cfStore.forceCleanup();
    if (oneStatus != CompactionManager.AllSSTableOpStatus.SUCCESSFUL)     status=oneStatus;
  }
  return status.statusCode;
}
