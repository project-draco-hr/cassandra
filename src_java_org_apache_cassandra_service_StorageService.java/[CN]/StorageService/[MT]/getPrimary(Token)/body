{
  InetAddress endpoint=FBUtilities.getLocalAddress();
  List tokens=new ArrayList<Token>(tokenMetadata_.sortedTokens());
  if (tokens.size() > 0) {
    int index=Collections.binarySearch(tokens,token);
    if (index >= 0) {
      endpoint=tokenMetadata_.getEndPoint((Token)tokens.get(index));
    }
 else {
      index=(index + 1) * (-1);
      if (index < tokens.size())       endpoint=tokenMetadata_.getEndPoint((Token)tokens.get(index));
 else       endpoint=tokenMetadata_.getEndPoint((Token)tokens.get(0));
    }
  }
  return endpoint;
}
