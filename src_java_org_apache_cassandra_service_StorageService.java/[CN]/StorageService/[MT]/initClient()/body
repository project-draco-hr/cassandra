{
  initClient(0);
  boolean isUp=false;
  while (!isUp) {
    Uninterruptibles.sleepUninterruptibly(1,TimeUnit.SECONDS);
    for (    InetAddress address : Gossiper.instance.getLiveMembers()) {
      if (!Gossiper.instance.isFatClient(address)) {
        isUp=true;
      }
    }
  }
  while (!MigrationManager.isReadyForBootstrap()) {
    Uninterruptibles.sleepUninterruptibly(1,TimeUnit.SECONDS);
  }
}
