{
  initClient(0);
  try {
    boolean isUp=false;
    while (!isUp) {
      Thread.sleep(1000);
      for (      InetAddress address : Gossiper.instance.getLiveMembers()) {
        if (!Gossiper.instance.isFatClient(address)) {
          isUp=true;
        }
      }
    }
    while (!MigrationManager.isReadyForBootstrap()) {
      Thread.sleep(1000);
    }
  }
 catch (  InterruptedException e) {
    throw new AssertionError(e);
  }
}
