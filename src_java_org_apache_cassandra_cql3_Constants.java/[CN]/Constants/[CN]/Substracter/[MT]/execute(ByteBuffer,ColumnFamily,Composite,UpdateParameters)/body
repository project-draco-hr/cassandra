{
  ByteBuffer bytes=t.bindAndGet(params.options);
  if (bytes == null)   throw new InvalidRequestException("Invalid null value for counter increment");
  long increment=ByteBufferUtil.toLong(bytes);
  if (increment == Long.MIN_VALUE)   throw new InvalidRequestException("The negation of " + increment + " overflows supported counter precision (signed 8 bytes integer)");
  CellName cname=cf.getComparator().create(prefix,column);
  cf.addColumn(params.makeCounter(cname,-increment));
}
