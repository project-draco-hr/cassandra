{
  String[] values=RowMutation.getColumnAndColumnFamily(cf);
  if (values.length == 0 || values.length > 3)   throw new IllegalArgumentException("Column Family " + cf + " in invalid format. Must be in <column family>:<column> format.");
  ColumnFamily columnFamily=modifications_.get(values[0]);
  if (columnFamily == null)   columnFamily=new ColumnFamily(values[0]);
  if (values.length == 2) {
    columnFamily.createColumn(values[1]);
  }
  if (values.length == 3) {
    columnFamily.createColumn(values[1] + ":" + values[2]);
  }
  deletions_.put(values[0],columnFamily);
}
