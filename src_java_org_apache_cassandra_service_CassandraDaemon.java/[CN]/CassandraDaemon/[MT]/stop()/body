{
  logger.info("Cassandra shutting down...");
  thriftServer.stop();
  nativeServer.stop();
  if (FBUtilities.isWindows())   System.exit(0);
  if (jmxServer != null) {
    try {
      jmxServer.stop();
    }
 catch (    IOException e) {
      logger.error("Error shutting down local JMX server: ",e);
    }
  }
}
