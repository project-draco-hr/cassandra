{
  validateColumnName(keyspace,columnFamily,name);
  AbstractType validator=DatabaseDescriptor.getValueValidator(keyspace,columnFamily,name);
  try {
    if (validator != null)     validator.validate(value);
  }
 catch (  MarshalException me) {
    throw new InvalidRequestException(String.format("Invalid column value for column (name=%s); %s",ByteBufferUtil.bytesToHex(name),me.getMessage()));
  }
}
