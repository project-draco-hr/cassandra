{
  AbstractType<?> comparator=ColumnFamily.getComparatorFor(keyspace,columnFamily,null);
  for (  ByteBuffer name : columns) {
    if (name.remaining() > IColumn.MAX_NAME_LENGTH)     throw new InvalidRequestException();
    if (name.remaining() == 0)     throw new InvalidRequestException();
    try {
      comparator.validate(name);
    }
 catch (    MarshalException e) {
      throw new InvalidRequestException(e.getMessage());
    }
  }
}
