{
  for (  CellName name : columns) {
    if (name.dataSize() > org.apache.cassandra.db.Cell.MAX_NAME_LENGTH)     throw new InvalidRequestException(String.format("column name is too long (%s > %s)",name.dataSize(),org.apache.cassandra.db.Cell.MAX_NAME_LENGTH));
    if (name.isEmpty())     throw new InvalidRequestException("zero-length column name");
  }
}
