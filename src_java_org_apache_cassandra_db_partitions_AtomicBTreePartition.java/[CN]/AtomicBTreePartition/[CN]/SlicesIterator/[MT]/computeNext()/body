{
  while (true) {
    if (currentSlice == null) {
      if (idx >= slices.size())       return endOfData();
      int sliceIdx=isReverseOrder ? slices.size() - idx - 1 : idx;
      currentSlice=new SingleSliceIterator(metadata,partitionKey,holder,selection,slices.get(sliceIdx),isReverseOrder,allocator);
      idx++;
    }
    if (currentSlice.hasNext())     return currentSlice.next();
    currentSlice=null;
  }
}
