{
  File tempdir=Files.createTempDir();
  String schema="CREATE TABLE ks.test2 (" + "  k UUID," + "  c int,"+ "  PRIMARY KEY (k)"+ ")";
  String insert="INSERT INTO ks.test2 (k, c) VALUES (?, ?)";
  CQLSSTableWriter writer=CQLSSTableWriter.builder().inDirectory(tempdir).forTable(schema).withPartitioner(StorageService.instance.getPartitioner()).using(insert).withBufferSizeInMB(1).build();
  for (int i=0; i < 50000; i++) {
    writer.addRow(UUID.randomUUID(),0);
  }
  writer.close();
}
