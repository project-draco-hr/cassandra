{
  ColumnFamilyType type=subcc == null ? ColumnFamilyType.Standard : ColumnFamilyType.Super;
  CFMetaData newCFMD=new CFMetaData(Table.SYSTEM_TABLE,cfName,type,comparator,subcc,cfId);
  return newCFMD.comment(comment).keyCacheSize(0.01).readRepairChance(0).gcGraceSeconds(0).memSize(memtableThroughPutInMB).memOps(sizeMemtableOperations(memtableThroughPutInMB)).mergeShardsChance(0.0).rowCacheSavePeriod(0).keyCacheSavePeriod(0);
}
