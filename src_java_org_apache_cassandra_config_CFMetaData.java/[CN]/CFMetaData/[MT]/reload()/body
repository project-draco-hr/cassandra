{
  Row cfDefRow=SystemTable.readSchemaRow(ksName,cfName);
  if (cfDefRow.cf == null || cfDefRow.cf.isEmpty())   throw new RuntimeException(String.format("%s not found in the schema definitions table.",ksName + ":" + cfName));
  try {
    apply(fromSchema(cfDefRow));
  }
 catch (  ConfigurationException e) {
    throw new RuntimeException(e);
  }
}
