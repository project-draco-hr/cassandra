{
  Row cfDefRow=SystemTable.readSchemaRow(ksName,cfName);
  if (cfDefRow.cf == null || cfDefRow.cf.isEmpty())   throw new IOException(String.format("%s not found in the schema definitions table.",ksName + ":" + cfName));
  try {
    apply(fromSchema(cfDefRow.cf));
  }
 catch (  ConfigurationException e) {
    throw new IOException(e);
  }
}
