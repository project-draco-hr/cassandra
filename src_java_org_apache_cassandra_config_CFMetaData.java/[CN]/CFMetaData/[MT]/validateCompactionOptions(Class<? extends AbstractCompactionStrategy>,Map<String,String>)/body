{
  try {
    if (options == null)     return;
    Map<?,?> unknownOptions=(Map)strategyClass.getMethod("validateOptions",Map.class).invoke(null,options);
    if (!unknownOptions.isEmpty())     throw new ConfigurationException(String.format("Properties specified %s are not understood by %s",unknownOptions.keySet(),strategyClass.getSimpleName()));
  }
 catch (  NoSuchMethodException e) {
    logger.warn("Compaction Strategy {} does not have a static validateOptions method. Validation ignored",strategyClass.getName());
  }
catch (  InvocationTargetException e) {
    if (e.getTargetException() instanceof ConfigurationException)     throw (ConfigurationException)e.getTargetException();
    throw new ConfigurationException("Failed to validate compaction options: " + options);
  }
catch (  ConfigurationException e) {
    throw e;
  }
catch (  Exception e) {
    throw new ConfigurationException("Failed to validate compaction options: " + options);
  }
}
