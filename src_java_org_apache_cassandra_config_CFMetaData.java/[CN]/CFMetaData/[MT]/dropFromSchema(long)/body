{
  RowMutation m=new RowMutation(Table.SYSTEM_TABLE,SystemTable.getSchemaKSKey(ksName));
  for (  CfDef._Fields field : CfDef._Fields.values())   m.delete(new QueryPath(SystemTable.SCHEMA_COLUMNFAMILIES_CF,null,compositeNameFor(cfName,field.getFieldName())),timestamp);
  for (  ColumnDefinition columnDefinition : column_metadata.values())   ColumnDefinition.deleteFromSchema(m,cfName,comparator,columnDefinition.name,timestamp);
  return m;
}
